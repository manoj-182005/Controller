<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F172A">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:background="#050A16">

        <Button
            android:id="@+id/btnQuickShareBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="‹"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quick Share"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEditPins"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Edit Pins"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:backgroundTint="#312E81" />

        <Button
            android:id="@+id/btnAddPin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:text="+ Add Pin"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:backgroundTint="#7C3AED" />
    </LinearLayout>

    <!-- Empty state -->
    <TextView
        android:id="@+id/tvQuickShareEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No pinned files — pin frequently shared files"
        android:textColor="#64748B"
        android:textSize="15sp"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

    <!-- Pins ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/quickSharePinsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" />
    </ScrollView>
</LinearLayout>
