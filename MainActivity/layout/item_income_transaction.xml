<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="10dp"
    android:paddingHorizontal="4dp">

    <!-- Category Icon -->
    <TextView
        android:id="@+id/tvIncomeIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="ðŸ’°"
        android:background="@drawable/expense_chip_bg"
        android:layout_marginEnd="12dp" />

    <!-- Title + source / wallet -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIncomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvIncomeSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:textColor="#6B7B8D"
            android:textSize="11sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvIncomeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01 Jan, 10:00 AM"
            android:textColor="#4B5563"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Amount + wallet -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tvIncomeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+â‚¹0"
            android:textColor="#22C55E"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvIncomeWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textColor="#4B5563"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
