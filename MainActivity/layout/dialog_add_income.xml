<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/glass_card_bg"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD INCOME"
        android:textSize="13sp"
        android:textColor="#22C55E"
        android:letterSpacing="0.15"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <!-- Amount -->
    <EditText
        android:id="@+id/etIncomeAmount"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="â‚¹ Amount"
        android:textColorHint="#3D4B5E"
        android:textColor="#22C55E"
        android:textSize="22sp"
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:background="@drawable/task_input_bg"
        android:paddingHorizontal="16dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp" />

    <!-- Title -->
    <EditText
        android:id="@+id/etIncomeTitle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Income title (e.g. Monthly Salary)"
        android:textColorHint="#3D4B5E"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@drawable/task_input_bg"
        android:paddingHorizontal="14dp"
        android:singleLine="true"
        android:layout_marginBottom="12dp" />

    <!-- Category label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="#6B7B8D"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <!-- Category chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/incomeCategoryChipContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- Source label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source"
        android:textColor="#6B7B8D"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <!-- Source chips (2 rows) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/sourceRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/sourceRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>

    <!-- Wallet selector -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallet"
        android:textColor="#6B7B8D"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/incomeWalletChipContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- Note -->
    <EditText
        android:id="@+id/etIncomeNote"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Notes (optional)"
        android:textColorHint="#3D4B5E"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@drawable/task_input_bg"
        android:paddingHorizontal="14dp"
        android:singleLine="true"
        android:layout_marginBottom="16dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveIncome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ðŸ’° Save Income"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#22C55E"
        app:cornerRadius="14dp" />

</LinearLayout>
