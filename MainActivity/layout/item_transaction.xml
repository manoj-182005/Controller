<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/glass_card_bg"
    android:padding="14dp">

    <!-- Category icon -->
    <TextView
        android:id="@+id/tvTransIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:textSize="22sp"
        android:background="@drawable/expense_chip_bg" />

    <!-- Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvTransCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTransNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6B7B8D"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Amount + time -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tvTransAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTransTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4B5563"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
