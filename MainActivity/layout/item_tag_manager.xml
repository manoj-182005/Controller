<?xml version="1.0" encoding="utf-8"?>
<!-- Tag list item for tags manager -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/notes_tag_item_bg"
    android:padding="14dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="6dp">

    <!-- Tag icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ·ï¸"
        android:textSize="20sp"
        android:layout_marginEnd="12dp" />

    <!-- Tag name + count -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTagName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag Name"
            android:textColor="#E2E8F0"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTagCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 notes"
            android:textColor="#64748B"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Rename button -->
    <ImageButton
        android:id="@+id/btnRenameTag"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="#94A3B8"
        android:scaleType="centerInside"
        android:contentDescription="Rename" />

    <!-- Delete button -->
    <ImageButton
        android:id="@+id/btnDeleteTag"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="#EF4444"
        android:scaleType="centerInside"
        android:contentDescription="Delete"
        android:layout_marginStart="4dp" />
</LinearLayout>
