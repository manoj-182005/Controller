                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hubCardFileTransfer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/card_files_bg"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“" android:textSize="32sp" android:layout_marginBottom="8dp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="File Transfer" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Send &amp; Receive" android:textColor="#E0F7FF" android:textSize="11sp" android:alpha="0.85" />
                </LinearLayout>

            </LinearLayout>

            <!-- Row 3: AI Assistant + PC Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/hubCardAI"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/card_ai_bg"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ¤–" android:textSize="32sp" android:layout_marginBottom="8dp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="AI Assistant" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Voice &amp; Write AI" android:textColor="#F0F0FF" android:textSize="11sp" android:alpha="0.85" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hubCardPCControl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/card_pc_control_bg"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŽ®" android:textSize="32sp" android:layout_marginBottom="8dp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PC Control" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Volume, Display &amp; More" android:textColor="#E0FFEF" android:textSize="11sp" android:alpha="0.85" />
                </LinearLayout>

            </LinearLayout>

            <!-- Row 4: Media & Apps + Dynamic Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
