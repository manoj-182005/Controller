                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/card_dynamic_bar_bg"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="âœ¨" android:textSize="32sp" android:layout_marginBottom="8dp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dynamic Bar" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Floating Controls" android:textColor="#E8D8FF" android:textSize="11sp" android:alpha="0.85" />
                </LinearLayout>

            </LinearLayout>

            <!-- Row 5: Chat + System Monitor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/hubCardChat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/card_chat_bg"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ’¬" android:textSize="32sp" android:layout_marginBottom="8dp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chat" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PC Messaging" android:textColor="#D0ECFF" android:textSize="11sp" android:alpha="0.85" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hubCardSystemMonitor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/card_system_monitor_bg"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“Š" android:textSize="32sp" android:layout_marginBottom="8dp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="System Monitor" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CPU, RAM, GPU" android:textColor="#CCFFE0" android:textSize="11sp" android:alpha="0.85" />
                </LinearLayout>

            </LinearLayout>

            <!-- Row 6: Power Control + Shortcuts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/hubCardPowerControl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/card_shutdown_bg"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â»" android:textSize="32sp" android:layout_marginBottom="8dp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Power Control" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Shutdown, Restart, Sleep" android:textColor="#FFD0D0" android:textSize="11sp" android:alpha="0.85" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hubCardShortcuts"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/card_shortcuts_bg"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="âŒ¨" android:textSize="32sp" android:layout_marginBottom="8dp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Shortcuts" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Custom Macros" android:textColor="#FFF0CC" android:textSize="11sp" android:alpha="0.85" />
                </LinearLayout>

            </LinearLayout>

            <!-- Row 7: Browser Remote + Game Controller -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/hubCardBrowserRemote"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/card_browser_remote_bg"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŒ" android:textSize="32sp" android:layout_marginBottom="8dp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Browser Remote" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Control PC Browser" android:textColor="#DDEEFF" android:textSize="11sp" android:alpha="0.85" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hubCardGameController"
                    android:layout_width="0dp"
