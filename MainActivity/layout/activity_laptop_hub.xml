                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Media &amp; Apps" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Notepad, Webcam &amp; More" android:textColor="#FFE0E0" android:textSize="11sp" android:alpha="0.85" />
                </LinearLayout>

                <LinearLayout
