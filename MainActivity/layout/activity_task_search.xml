<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced Task Search Screen -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A0E21">

    <!-- â”€â”€ Search Bar â”€â”€ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back"
            android:scaleType="centerInside"
            android:padding="4dp" />

        <EditText
            android:id="@+id/etSearchQuery"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/task_search_field_bg"
            android:hint="Search tasks..."
            android:textColorHint="#4B5563"
            android:textColor="#F1F5F9"
            android:textSize="15sp"
            android:paddingHorizontal="14dp"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/btnClearSearch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Clear"
            android:scaleType="centerInside"
            android:padding="4dp"
            android:layout_marginStart="4dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- â”€â”€ Search Filters â”€â”€ -->
    <HorizontalScrollView
        android:id="@+id/searchFiltersScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="12dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/searchFiltersRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chipFilterPriority"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="Priority â–¾"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:background="@drawable/task_filter_chip_inactive_bg"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/chipFilterCategory"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="Category â–¾"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:background="@drawable/task_filter_chip_inactive_bg"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/chipFilterStatus"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="Status â–¾"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:background="@drawable/task_filter_chip_inactive_bg"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/chipFilterDate"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="Date Range â–¾"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:background="@drawable/task_filter_chip_inactive_bg" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- â”€â”€ Recent Searches / Results â”€â”€ -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Recent searches (shown before typing) -->
        <LinearLayout
            android:id="@+id/recentSearchesSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Searches"
                    android:textColor="#94A3B8"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnClearRecent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:textColor="#60A5FA"
                    android:textSize="12sp"
                    android:paddingHorizontal="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recentSearchesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <!-- Search results -->
        <LinearLayout
            android:id="@+id/searchResultsSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvSearchResultCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textColor="#6B7280"
                android:textSize="13sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSearchResults"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingHorizontal="12dp"
                android:paddingBottom="16dp" />
        </LinearLayout>

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/searchEmptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="48sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvSearchEmptyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No results found"
                android:textColor="#F1F5F9"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSearchEmptySubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try different keywords or filters"
                android:textColor="#6B7280"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
