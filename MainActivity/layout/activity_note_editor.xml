<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- â•â•â• TOP TOOLBAR â•â•â• -->
        <LinearLayout
            android:id="@+id/topToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:background="#0A0E21">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="#FFFFFF"
                android:scaleType="centerInside"
                android:contentDescription="Back" />

            <!-- Breadcrumb / block type indicator -->
            <TextView
                android:id="@+id/tvBlockTypeIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#64748B"
                android:textSize="11sp"
                android:paddingHorizontal="12dp"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Undo -->
            <ImageButton
                android:id="@+id/btnUndo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_undo"
                android:tint="#64748B"
                android:scaleType="centerInside"
                android:contentDescription="Undo" />

            <!-- Redo -->
            <ImageButton
                android:id="@+id/btnRedo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_redo"
                android:tint="#64748B"
                android:scaleType="centerInside"
                android:contentDescription="Redo" />

            <!-- Pin toggle -->
            <ImageButton
                android:id="@+id/btnPin"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/btn_star_big_off"
                android:tint="#64748B"
                android:scaleType="centerInside"
                android:contentDescription="Pin" />

            <!-- Lock toggle -->
            <ImageButton
                android:id="@+id/btnLock"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_lock_idle_lock"
                android:tint="#64748B"
                android:scaleType="centerInside"
                android:contentDescription="Lock" />

            <!-- Reminder -->
            <ImageButton
                android:id="@+id/btnReminder"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_popup_reminder"
                android:tint="#64748B"
                android:scaleType="centerInside"
                android:contentDescription="Reminder" />

            <!-- More menu -->
            <ImageButton
                android:id="@+id/btnMoreMenu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_more"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="More" />
        </LinearLayout>

        <!-- â•â•â• SMART BANNER CONTAINER â•â•â• -->
        <LinearLayout
            android:id="@+id/smartBannerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

        <!-- â•â•â• MAIN EDITOR AREA (NestedScrollView + block RecyclerView) â•â•â• -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/editorScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:paddingBottom="140dp">

            <LinearLayout
                android:id="@+id/editorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="16dp">

                <!-- Category chip -->
                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal"
                    android:textColor="#F59E0B"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/notes_tag_chip_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="8dp" />

                <!-- Cover image area (hidden by default) -->
                <FrameLayout
                    android:id="@+id/coverImageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/coverImage"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop" />
                </FrameLayout>

                <!-- Icon / Emoji header (like Notion) -->
                <TextView
                    android:id="@+id/noteIconEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="42sp"
                    android:paddingBottom="4dp"
                    android:visibility="gone" />

                <!-- Title field -->
                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Untitled"
                    android:textColorHint="#475569"
                    android:textColor="#F1F5F9"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:background="@null"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="3"
                    android:imeOptions="actionNext" />

                <!-- Tags row -->
                <LinearLayout
                    android:id="@+id/tagsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ·ï¸"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:id="@+id/tagsList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                    <TextView
                        android:id="@+id/btnAddTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Add"
                        android:textColor="#64748B"
                        android:textSize="12sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />
                </LinearLayout>

                <!-- Properties row (database-mode custom fields) -->
                <LinearLayout
                    android:id="@+id/propertiesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp" />

                <!-- Reminder banner -->
                <LinearLayout
                    android:id="@+id/reminderBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/notes_chip_bg"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ””"
                        android:textSize="16sp"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tvReminderTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reminder set"
                        android:textColor="#F59E0B"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/btnClearReminder"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="#64748B"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1E293B"
                    android:layout_marginBottom="8dp" />

                <!-- â•â•â• BLOCK EDITOR RecyclerView â•â•â• -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/blocksRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:paddingBottom="80dp"
                    android:overScrollMode="never" />

                <!-- Backlinks section (notes that mention this note) -->
                <LinearLayout
                    android:id="@+id/backlinksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="24dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1E293B"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”—  Linked References"
                        android:textColor="#94A3B8"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/backlinksList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>

                <!-- Table of Contents (auto-generated from headings) -->
                <LinearLayout
                    android:id="@+id/tocContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1E293B"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‘  Table of Contents"
                        android:textColor="#94A3B8"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/tocList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>

                <!-- Word count goal progress line -->
                <View
                    android:id="@+id/wordGoalProgressLine"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- â•â•â• BOTTOM STATUS BAR â•â•â• -->
        <LinearLayout
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:background="#0A0E21">

            <TextView
                android:id="@+id/tvWordCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 words"
                android:textColor="#475569"
                android:textSize="10sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="#2D3748"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/tvCharCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 chars"
                android:textColor="#475569"
                android:textSize="10sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="#2D3748"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/tvReadTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt; 1 min read"
                android:textColor="#475569"
                android:textSize="10sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="#2D3748"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:id="@+id/tvBlockCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 block"
                android:textColor="#475569"
                android:textSize="10sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvLastSaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:textColor="#22C55E"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- â•â•â• FORMATTING TOOLBAR â€” Rebuilt Professional Toolbar â•â•â• -->
    <HorizontalScrollView
        android:id="@+id/formattingToolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="32dp"
        android:scrollbars="none"
        android:background="@drawable/notes_bottom_bar_bg"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="4dp">

            <!-- â”€â”€ Add Block â”€â”€ -->
            <ImageButton
                android:id="@+id/btnAddBlock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@android:drawable/ic_input_add"
                android:tint="#3B82F6"
                android:scaleType="centerInside"
                android:contentDescription="Add Block" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#2D3748"
                android:layout_marginHorizontal="4dp" />

            <!-- â”€â”€ Text Format Section â”€â”€ -->
            <ImageButton
                android:id="@+id/btnBold"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_bold"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Bold" />

            <ImageButton
                android:id="@+id/btnItalic"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_italic"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Italic"
                android:layout_marginStart="2dp" />

            <ImageButton
                android:id="@+id/btnUnderline"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_underline"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Underline"
                android:layout_marginStart="2dp" />

            <ImageButton
                android:id="@+id/btnStrikethrough"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_strikethrough"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Strikethrough"
                android:layout_marginStart="2dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#2D3748"
                android:layout_marginHorizontal="4dp" />

            <!-- â”€â”€ Colors Section â”€â”€ -->
            <ImageButton
                android:id="@+id/btnHighlight"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_highlight"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Highlight" />

            <ImageButton
                android:id="@+id/btnTextColor"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_color"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Text Color"
                android:layout_marginStart="2dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#2D3748"
                android:layout_marginHorizontal="4dp" />

            <!-- â”€â”€ Block Type Conversion Section â”€â”€ -->
            <ImageButton
                android:id="@+id/btnHeading"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_heading"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Heading" />

            <ImageButton
                android:id="@+id/btnBulletList"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_bullet"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Bullet List"
                android:layout_marginStart="2dp" />

            <ImageButton
                android:id="@+id/btnNumberedList"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_numbered"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Numbered List"
                android:layout_marginStart="2dp" />

            <ImageButton
                android:id="@+id/btnChecklist"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_checklist"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Checklist"
                android:layout_marginStart="2dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#2D3748"
                android:layout_marginHorizontal="4dp" />

            <!-- â”€â”€ Insert Media Section â”€â”€ -->
            <ImageButton
                android:id="@+id/btnInsertImage"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_insert_image"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Insert Image"
                android:layout_marginStart="2dp" />

            <ImageButton
                android:id="@+id/btnInsertDivider"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_divider"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Insert Divider"
                android:layout_marginStart="2dp" />

            <ImageButton
                android:id="@+id/btnCodeBlock"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@drawable/ic_format_code"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Code Block"
                android:layout_marginStart="2dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#2D3748"
                android:layout_marginHorizontal="4dp" />

            <!-- â”€â”€ Indent/Alignment Section â”€â”€ -->
            <ImageButton
                android:id="@+id/btnIndent"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@android:drawable/ic_menu_send"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Indent" />

            <ImageButton
                android:id="@+id/btnOutdent"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@android:drawable/ic_media_previous"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Outdent"
                android:layout_marginStart="2dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#2D3748"
                android:layout_marginHorizontal="4dp" />

            <!-- â”€â”€ Voice & Sketch â”€â”€ -->
            <ImageButton
                android:id="@+id/btnVoiceInput"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@android:drawable/ic_btn_speak_now"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Voice Input" />

            <ImageButton
                android:id="@+id/btnSketch"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/editor_btn_bg"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="#94A3B8"
                android:scaleType="centerInside"
                android:contentDescription="Sketch"
                android:layout_marginStart="2dp" />

        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>
