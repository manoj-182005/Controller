<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="20dp">

            <!-- â•â•â•â•â•â•â•â•â•â•â• HEADER â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Hamburger menu icon -->
                <ImageView
                    android:id="@+id/btnDrawer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:padding="8dp"
                    android:background="@drawable/task_icon_circle_bg"
                    android:contentDescription="Menu"
                    android:layout_marginEnd="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task Manager"
                        android:textColor="#F1F5F9"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvDateSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today, Jan 1"
                        android:textColor="#94A3B8"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:padding="8dp"
                    android:background="@drawable/task_icon_circle_bg"
                    android:contentDescription="Search"
                    android:layout_marginEnd="8dp" />

                <!-- Filter icon with active indicator dot -->
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/btnCategories"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:padding="8dp"
                        android:background="@drawable/task_icon_circle_bg"
                        android:contentDescription="Categories" />

                    <View
                        android:id="@+id/filterActiveDot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:visibility="gone" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/btnTrash"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:padding="8dp"
                    android:background="@drawable/task_icon_circle_bg"
                    android:contentDescription="Trash" />
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• SEARCH BAR (hidden by default) â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/searchBarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/task_quick_add_bg"
                android:padding="4dp"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:hint="Search tasks..."
                    android:textColorHint="#4B5563"
                    android:textColor="#F1F5F9"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="14dp"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:id="@+id/btnCloseSearch"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="Close search" />
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• STATS CARDS (Horizontal Scroll) â•â•â•â•â•â•â•â•â•â•â• -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="12dp"
                android:clipToPadding="false"
                android:clipChildren="false">

                <LinearLayout
                    android:id="@+id/statsCardContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <!-- Today Card -->
                    <LinearLayout
                        android:id="@+id/statToday"
                        android:layout_width="125dp"
                        android:layout_height="105dp"
                        android:orientation="vertical"
                        android:background="@drawable/task_stat_today_gradient_bg"
                        android:padding="14dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvStatTodayCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“…"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:textColor="#D0FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Done Card -->
                    <LinearLayout
                        android:id="@+id/statCompleted"
                        android:layout_width="125dp"
                        android:layout_height="105dp"
                        android:orientation="vertical"
                        android:background="@drawable/task_stat_done_gradient_bg"
                        android:padding="14dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvStatCompletedCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ“"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Done"
                            android:textColor="#D0FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Overdue Card -->
                    <LinearLayout
                        android:id="@+id/statOverdue"
                        android:layout_width="125dp"
                        android:layout_height="105dp"
                        android:orientation="vertical"
                        android:background="@drawable/task_stat_overdue_gradient_bg"
                        android:padding="14dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvStatOverdueCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âš "
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overdue"
                            android:textColor="#D0FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Starred Card -->
                    <LinearLayout
                        android:id="@+id/statStarred"
                        android:layout_width="125dp"
                        android:layout_height="105dp"
                        android:orientation="vertical"
                        android:background="@drawable/task_stat_starred_gradient_bg"
                        android:padding="14dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvStatStarredCount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â˜…"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Starred"
                            android:textColor="#D0FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Focus Score Card -->
                    <LinearLayout
                        android:id="@+id/statFocusScore"
                        android:layout_width="125dp"
                        android:layout_height="105dp"
                        android:orientation="vertical"
                        android:background="@drawable/task_stat_focus_gradient_bg"
                        android:padding="14dp"
                        android:elevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvStatFocusScore"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŽ¯"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Focus Score"
                            android:textColor="#D0FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- â•â•â•â•â•â•â•â•â•â•â• STREAK BANNER â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/streakBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/task_streak_banner_bg"
                android:padding="14dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="14dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tvStreakIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥"
                    android:textSize="22sp"
                    android:layout_marginEnd="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStreakTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Day Streak"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvStreakSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keep it up!"
                        android:textColor="#E0FFFFFF"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†’"
                    android:textColor="#E0FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• OVERDUE ALERT BANNER â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/overdueAlertBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/task_overdue_banner_bg"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸"
                    android:textSize="18sp"
                    android:layout_marginEnd="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overdue Tasks"
                        android:textColor="#FCA5A5"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvOverdueMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You have tasks past their due date"
                        android:textColor="#FDA4AF"
                        android:textSize="11sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnDismissOverdue"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:padding="4dp"
                    android:contentDescription="Dismiss" />
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• TODAY'S FOCUS â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/todayFocusSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="14dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯"
                        android:textSize="16sp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Today's Focus"
                        android:textColor="#F1F5F9"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvFocusCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#94A3B8"
                        android:textSize="12sp"
                        android:background="@drawable/task_stat_pill_bg"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="3dp" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:clipToPadding="false"
                    android:paddingEnd="16dp">

                    <LinearLayout
                        android:id="@+id/todayFocusContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• QUICK ADD BAR â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/quickAddContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/task_quick_add_bg"
                android:padding="4dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="14dp">

                <EditText
                    android:id="@+id/etQuickAdd"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:hint="Add a task..."
                    android:textColorHint="#4B5563"
                    android:textColor="#F1F5F9"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="14dp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/btnQuickAdd"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/task_quick_add_btn_bg" />
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• FILTER CHIPS â•â•â•â•â•â•â•â•â•â•â• -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="14dp"
                android:clipToPadding="false">

                <LinearLayout
                    android:id="@+id/filterChipContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Chips will be added programmatically -->
                </LinearLayout>
            </HorizontalScrollView>

            <!-- â•â•â•â•â•â•â•â•â•â•â• MEETINGS SECTION â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/meetingsSectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tvMeetingsSectionTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Meetings"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/btnViewAllMeetings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textColor="#6C63FF"
                    android:textSize="13sp"
                    android:paddingEnd="12dp" />
                <TextView
                    android:id="@+id/btnAddMeeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add"
                    android:textColor="#6C63FF"
                    android:textSize="13sp" />
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/meetingsStripScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/meetingsStripContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp" />
            </HorizontalScrollView>

            <!-- â•â•â•â•â•â•â•â•â•â•â• GROUP + SORT ROW â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvResultLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Tasks"
                    android:textColor="#B0BEC5"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvResultCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#60A5FA"
                    android:textSize="12sp"
                    android:background="@drawable/task_result_count_pill_bg"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="8dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/btnGroupBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group: None â–¾"
                    android:textColor="#60A5FA"
                    android:textSize="11sp"
                    android:background="@drawable/task_group_sort_btn_bg"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:layout_marginEnd="6dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/btnSortBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort: Priority â–¾"
                    android:textColor="#60A5FA"
                    android:textSize="11sp"
                    android:background="@drawable/task_group_sort_btn_bg"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• TASK LIST (RecyclerView) â•â•â•â•â•â•â•â•â•â•â• -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingBottom="16dp" />

            <!-- â•â•â•â•â•â•â•â•â•â•â• EMPTY STATE â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/emptyStateContainer"
