<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="20dp">

            <!-- â•â•â•â•â•â•â•â•â•â•â• HEADER â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task Manager"
                        android:textColor="#F1F5F9"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvDateSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today, Jan 1"
                        android:textColor="#94A3B8"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:padding="8dp"
                    android:background="@drawable/task_icon_circle_bg"
                    android:contentDescription="Search"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/btnCategories"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:padding="8dp"
                    android:background="@drawable/task_icon_circle_bg"
                    android:contentDescription="Categories"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/btnTrash"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:padding="8dp"
                    android:background="@drawable/task_icon_circle_bg"
                    android:contentDescription="Trash" />
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• SEARCH BAR (hidden by default) â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/searchBarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/task_quick_add_bg"
                android:padding="4dp"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:hint="Search tasks..."
                    android:textColorHint="#4B5563"
                    android:textColor="#F1F5F9"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="14dp"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:id="@+id/btnCloseSearch"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="Close search" />
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• STATS ROW â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <!-- Total Today -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/task_stat_blue_bg"
                    android:padding="12dp"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:id="@+id/tvStatTodayCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#60A5FA"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textColor="#94A3B8"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Completed Today -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/task_stat_green_bg"
                    android:padding="12dp"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:id="@+id/tvStatCompletedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#34D399"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Done"
                        android:textColor="#94A3B8"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Overdue -->
                <LinearLayout
                    android:id="@+id/statOverdue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/task_stat_red_bg"
                    android:padding="12dp"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:id="@+id/tvStatOverdueCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#F87171"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overdue"
                        android:textColor="#94A3B8"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Starred -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/task_stat_pill_bg"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvStatStarredCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FBBF24"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Starred"
                        android:textColor="#94A3B8"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• OVERDUE ALERT BANNER â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/overdueAlertBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/task_overdue_banner_bg"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸"
                    android:textSize="18sp"
                    android:layout_marginEnd="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overdue Tasks"
                        android:textColor="#FCA5A5"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvOverdueMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You have tasks past their due date"
                        android:textColor="#FDA4AF"
                        android:textSize="11sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnDismissOverdue"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:padding="4dp"
                    android:contentDescription="Dismiss" />
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• TODAY'S FOCUS â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/todayFocusSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="14dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯"
                        android:textSize="16sp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Today's Focus"
                        android:textColor="#F1F5F9"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvFocusCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#94A3B8"
                        android:textSize="12sp"
                        android:background="@drawable/task_stat_pill_bg"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="3dp" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:clipToPadding="false"
                    android:paddingEnd="16dp">

                    <LinearLayout
                        android:id="@+id/todayFocusContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• QUICK ADD BAR â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/task_quick_add_bg"
                android:padding="4dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="14dp">

                <EditText
                    android:id="@+id/etQuickAdd"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:hint="Quick add a task..."
                    android:textColorHint="#4B5563"
                    android:textColor="#F1F5F9"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="14dp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/btnQuickAdd"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/task_quick_add_btn_bg" />
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• FILTER CHIPS â•â•â•â•â•â•â•â•â•â•â• -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="14dp"
                android:clipToPadding="false">

                <LinearLayout
                    android:id="@+id/filterChipContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Chips will be added programmatically -->
                </LinearLayout>
            </HorizontalScrollView>

            <!-- â•â•â•â•â•â•â•â•â•â•â• GROUP + SORT ROW â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvResultCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All Tasks"
                    android:textColor="#94A3B8"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/btnGroupBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group â–¾"
                    android:textColor="#60A5FA"
                    android:textSize="12sp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/btnSortBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort â–¾"
                    android:textColor="#60A5FA"
                    android:textSize="12sp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â• TASK LIST (RecyclerView) â•â•â•â•â•â•â•â•â•â•â• -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingBottom="16dp" />

            <!-- â•â•â•â•â•â•â•â•â•â•â• EMPTY STATE â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/emptyStateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvEmptyIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹"
                    android:textSize="48sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvEmptyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No tasks yet"
                    android:textColor="#F1F5F9"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvEmptySubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add your first task to get started"
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- â•â•â•â•â•â•â•â•â•â•â• FAB â•â•â•â•â•â•â•â•â•â•â• -->
    <TextView
        android:id="@+id/fabAddTask"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/task_fab_bg"
        android:elevation="8dp" />

    <!-- â•â•â•â•â•â•â•â•â•â•â• Bulk Action Bar (multi-select) â•â•â•â•â•â•â•â•â•â•â• -->
    <LinearLayout
        android:id="@+id/bulkActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/task_bulk_action_bar_bg"
        android:padding="12dp"
        android:elevation="12dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvBulkCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 selected"
                android:textColor="#F1F5F9"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnBulkCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#60A5FA"
                android:textSize="13sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/btnBulkComplete"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="âœ“ Done"
                android:textColor="#66BB6A"
                android:textSize="12sp"
                android:background="@drawable/dynamic_bar_btn_bg"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/btnBulkPriority"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Priority"
                android:textColor="#F59E0B"
                android:textSize="12sp"
                android:background="@drawable/dynamic_bar_btn_bg"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/btnBulkCategory"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Category"
                android:textColor="#60A5FA"
                android:textSize="12sp"
                android:background="@drawable/dynamic_bar_btn_bg"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/btnBulkStar"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="â˜… Star"
                android:textColor="#FBBF24"
                android:textSize="12sp"
                android:background="@drawable/dynamic_bar_btn_bg"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/btnBulkTrash"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ—‘ Trash"
                android:textColor="#EF5350"
                android:textSize="12sp"
                android:background="@drawable/dynamic_bar_btn_bg" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
