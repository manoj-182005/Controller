<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#0F172A"
    android:padding="16dp">

    <!-- â•â•â• HEADER â•â•â• -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ’¡ Quick Idea"
            android:textColor="#F59E0B"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWidgetDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#64748B"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- â•â•â• INPUT â•â•â• -->
    <EditText
        android:id="@+id/etIdeaInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Capture your idea..."
        android:textColor="#F1F5F9"
        android:textColorHint="#334155"
        android:textSize="15sp"
        android:background="@null"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:layout_marginTop="8dp"
        android:padding="4dp" />

    <!-- â•â•â• SAVE BUTTON â•â•â• -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/btnSaveIdea"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@android:drawable/ic_menu_send"
            android:tint="#F59E0B"
            android:scaleType="centerInside"
            android:contentDescription="Save idea" />
    </LinearLayout>
</LinearLayout>
