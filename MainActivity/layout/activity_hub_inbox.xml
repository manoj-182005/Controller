<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hub_gradient_bg">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:background="#050A16">

        <Button
            android:id="@+id/btnInboxBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="â€¹"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¥ Inbox"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInboxCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 files waiting"
                android:textColor="#64748B"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAcceptHighConfidence"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Accept 80%+"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#059669"
            app:cornerRadius="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="#080D1A">

        <LinearLayout
            android:id="@+id/inboxFilterChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp" />

    </HorizontalScrollView>

    <!-- Items List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/inboxItemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp" />

    </ScrollView>

</LinearLayout>
