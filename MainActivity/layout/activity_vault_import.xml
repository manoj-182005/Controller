<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E21"
    android:orientation="vertical">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#0F172A"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="â†"
            android:textColor="#F1F5F9"
            android:textSize="22sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Import Files"
            android:textColor="#F1F5F9"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- File list label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp"
        android:text="Files to import"
        android:textColor="#94A3B8"
        android:textSize="12sp" />

    <!-- File list -->
    <ListView
        android:id="@+id/listViewFiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1E293B"
        android:divider="#0F172A"
        android:dividerHeight="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Album selector -->
    <TextView
        android:id="@+id/btnSelectAlbum"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1E293B"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="ðŸ“  Select Album (optional)"
        android:textColor="#94A3B8"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Tags input -->
    <EditText
        android:id="@+id/etTags"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1E293B"
        android:hint="Add tags (comma separated)..."
        android:hintTextColor="#64748B"
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#F1F5F9"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressTint="#6C63FF" />

    <!-- Status text -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text=""
        android:textColor="#94A3B8"
        android:textSize="13sp" />

    <!-- Bottom buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/btnCopy"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#6C63FF"
            android:gravity="center"
            android:text="Copy to Vault"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btnMove"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#1E293B"
                android:gravity="center"
                android:text="Move to Vault"
                android:textColor="#F1F5F9"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="4dp"
                android:text="âš  Originals will be deleted"
                android:textColor="#EF4444"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
