<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E1A">

    <!-- â•â•â• AUTH SCREEN (shown first) â•â•â• -->
    <LinearLayout
        android:id="@+id/vaultAuthScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvAuthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock Vault"
            android:textColor="#F1F5F9"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvAuthSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your master password"
            android:textColor="#64748B"
            android:textSize="14sp"
            android:layout_marginBottom="32dp" />

        <EditText
            android:id="@+id/etMasterPassword"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/vault_input_bg"
            android:hint="Master Password"
            android:textColorHint="#475569"
            android:textColor="#F1F5F9"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            android:inputType="textPassword"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/vault_input_bg"
            android:hint="Confirm Password"
            android:textColorHint="#475569"
            android:textColor="#F1F5F9"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnAuthSubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/vault_btn_primary_bg"
            android:text="Unlock"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnBiometric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”‘ Use Biometric"
            android:textColor="#00D4AA"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- â•â•â• VAULT MAIN SCREEN â•â•â• -->
    <LinearLayout
        android:id="@+id/vaultMainScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- â”€â”€â”€ Top Bar â”€â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:background="#0A0E1A">

            <Button
                android:id="@+id/btnVaultBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="â€¹"
                android:textSize="26sp"
                android:textColor="#F1F5F9"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/tvVaultTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Password Vault"
                android:textColor="#F1F5F9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />

            <Button
                android:id="@+id/btnVaultHealth"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ðŸ›¡ï¸"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnVaultTrash"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ðŸ—‘ï¸"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnVaultMore"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="â‹®"
                android:textSize="22sp"
                android:textColor="#94A3B8"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <!-- â”€â”€â”€ Search Bar â”€â”€â”€ -->
        <EditText
            android:id="@+id/etVaultSearch"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/vault_search_bg"
            android:hint="ðŸ”  Search passwords..."
            android:textColorHint="#475569"
            android:textColor="#F1F5F9"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:inputType="text"
            android:singleLine="true" />

        <!-- â”€â”€â”€ Filter Chips â”€â”€â”€ -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/vaultFilterChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <!-- â”€â”€â”€ Password List â”€â”€â”€ -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/vaultListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="80dp"
                android:clipToPadding="false"
                android:scrollbars="none" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/vaultEmptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’"
                    android:textSize="64sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your vault is empty"
                    android:textColor="#F1F5F9"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap + to add your first password"
                    android:textColor="#64748B"
                    android:textSize="14sp" />

            </LinearLayout>

        </FrameLayout>

        <!-- â”€â”€â”€ FAB: Add Password â”€â”€â”€ -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fabAddPassword"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/vault_fab_bg"
                android:text="+"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:elevation="8dp" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
