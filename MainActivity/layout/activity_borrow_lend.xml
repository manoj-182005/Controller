<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- â•â•â• TOOLBAR â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="â€¹"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ¤ Borrow &amp; Lend"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/btnToggleBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- â•â•â• OVERDUE BANNER â•â•â• -->
            <LinearLayout
                android:id="@+id/overdueBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/iou_overdue_card_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvOverdueBanner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âš ï¸ You have overdue IOUs"
                    android:textColor="#EF4444"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€º"
                    android:textColor="#EF4444"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- â•â•â• HEADER SUMMARY CARD â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/iou_header_bg"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Total Owed To You -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Owed to You"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvTotalLent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#22C55E"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Net Balance -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Net Balance"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvNetBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Total You Owe -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You Owe"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvTotalBorrowed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#EF4444"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â• TABS â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@drawable/iou_tab_unselected_bg"
                android:padding="4dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:id="@+id/tabLent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="I Lent"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/iou_tab_selected_bg"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tabBorrowed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="I Borrowed"
                    android:textColor="#9CA3AF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- â•â•â• RECORDS LIST CONTAINER â•â•â• -->
            <LinearLayout
                android:id="@+id/recordsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- â•â•â• EMPTY STATE â•â•â• -->
            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No money tracked yet\nAdd who you lent to or borrowed from"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:textAlignment="center"
                android:gravity="center"
                android:padding="48dp"
                android:visibility="gone" />

            <!-- â•â•â• ANALYTICS SECTION â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“Š Analytics"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btnToggleAnalytics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â–¼"
                        android:textColor="#9CA3AF"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/analyticsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Lent"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvTotalLentAllTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹0"
                                android:textColor="#22C55E"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recovery Rate"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvRecoveryRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="#7C3AED"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Borrowed"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvTotalBorrowedAllTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹0"
                                android:textColor="#EF4444"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Days to Recover"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvAvgDaysRecover"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 days"
                                android:textColor="#F59E0B"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Most Frequent Person"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvMostFrequent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- FAB -->
    <TextView
        android:id="@+id/fabAdd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/iou_fab_bg"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>
