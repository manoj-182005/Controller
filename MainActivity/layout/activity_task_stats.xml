<?xml version="1.0" encoding="utf-8"?>
<!-- Task Stats / Productivity Dashboard -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E21">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- â”€â”€ Header â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="Back"
                    android:scaleType="centerInside"
                    android:padding="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insights"
                        android:textColor="#F1F5F9"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStatsSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your productivity overview"
                        android:textColor="#6B7280"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- â”€â”€ Today Summary Cards â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp">

                <!-- Completed Today -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/task_stat_card_bg"
                    android:padding="14dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tvStatsCompletedToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#66BB6A"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Done Today"
                        android:textColor="#94A3B8"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Total Today -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/task_stat_card_bg"
                    android:padding="14dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tvStatsTotalToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#60A5FA"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Today"
                        android:textColor="#94A3B8"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/task_stat_card_bg"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tvStatsStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#F59E0B"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day Streak ðŸ”¥"
                        android:textColor="#94A3B8"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- â”€â”€ Completion Rate Ring â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_chart_bg"
                android:layout_marginHorizontal="16dp"
                android:padding="20dp"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completion Rate"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Circular progress placeholder (drawn programmatically) -->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="8dp">

                    <View
                        android:id="@+id/viewCompletionRingBg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvCompletionPercent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0%"
                        android:textColor="#F1F5F9"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvCompletionDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- â”€â”€ 7-Day Bar Chart â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_chart_bg"
                android:layout_marginHorizontal="16dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 7 Days"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/barChartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:gravity="bottom" />

                <LinearLayout
                    android:id="@+id/barChartLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- â”€â”€ Avg Completion Time + Most Productive Day â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/task_chart_bg"
                    android:padding="14dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Time"
                        android:textColor="#94A3B8"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvStatsAvgTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€”"
                        android:textColor="#F1F5F9"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/task_chart_bg"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Day"
                        android:textColor="#94A3B8"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvStatsBestDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€”"
                        android:textColor="#F1F5F9"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- â”€â”€ Category Donut Chart â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_chart_bg"
                android:layout_marginHorizontal="16dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tasks by Category"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/categoryChartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- â”€â”€ Overdue Rate â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_chart_bg"
                android:layout_marginHorizontal="16dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overdue Rate"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvOverdueRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EF5350"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOverdueRateDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
