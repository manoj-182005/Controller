<?xml version="1.0" encoding="utf-8"?>
<!-- Pinned note card for horizontal carousel -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/notes_pinned_card_bg"
    android:padding="12dp"
    android:layout_marginEnd="10dp"
    android:minHeight="100dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvPinnedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pinned Note"
        android:textColor="#F1F5F9"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium" />

    <!-- Preview -->
    <TextView
        android:id="@+id/tvPinnedPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick preview..."
        android:textColor="#94A3B8"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="2dp" />

    <!-- Category chip -->
    <TextView
        android:id="@+id/tvPinnedCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal"
        android:textColor="#F59E0B"
        android:textSize="10sp"
        android:background="@drawable/notes_tag_chip_bg"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp"
        android:layout_marginTop="8dp" />
</LinearLayout>
