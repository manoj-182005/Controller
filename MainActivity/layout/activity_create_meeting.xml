<?xml version="1.0" encoding="utf-8"?>
<!-- Meeting Creation / Edit Screen -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12122A"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <!-- â”€â”€ Top Bar â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="#1A1A35">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Back"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:background="@drawable/task_icon_circle_bg" />

            <TextView
                android:id="@+id/tvMeetingHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="New Meeting"
                android:textColor="#F1F5F9"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnSaveMeetingTop"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="Save"
                android:textColor="#6C63FF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/task_chip_removable_bg" />
        </LinearLayout>

        <!-- â”€â”€ Meeting Title â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="8dp">

            <EditText
                android:id="@+id/etMeetingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Meeting title..."
                android:textColorHint="#4A4A6A"
                android:textColor="#F1F5F9"
                android:textSize="22sp"
                android:textStyle="bold"
                android:inputType="textCapSentences"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:autofillHints="off"
                android:imeOptions="actionNext"
                android:minLines="1"
                android:maxLines="3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2A2A4A"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- â”€â”€ Meeting Type Selector â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Type"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="10dp" />

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTypeInPerson"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="#1E1E3A"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_menu_mapmode"
                            android:contentDescription="In Person"
                            android:scaleType="centerInside"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Person"
                            android:textColor="#F1F5F9"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTypeVideo"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="#1E1E3A"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:contentDescription="Video Call"
                            android:scaleType="centerInside"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Video Call"
                            android:textColor="#F1F5F9"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTypePhone"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="#1E1E3A"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_menu_call"
                            android:contentDescription="Phone Call"
                            android:scaleType="centerInside"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Call"
                            android:textColor="#F1F5F9"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTypeOther"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="#1E1E3A"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            android:contentDescription="Other"
                            android:scaleType="centerInside"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            android:textColor="#F1F5F9"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- â”€â”€ Platform Selector (hidden until Video Call selected) â”€â”€ -->
        <LinearLayout
            android:id="@+id/layoutPlatformSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Platform"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="10dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/platformChipsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chipPlatformZoom"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingHorizontal="14dp"
                        android:text="Zoom"
                        android:textColor="#94A3B8"
                        android:textSize="13sp"
                        android:background="@drawable/task_chip_removable_bg"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/chipPlatformMeet"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingHorizontal="14dp"
                        android:text="Google Meet"
                        android:textColor="#94A3B8"
                        android:textSize="13sp"
                        android:background="@drawable/task_chip_removable_bg"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/chipPlatformTeams"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingHorizontal="14dp"
                        android:text="Teams"
                        android:textColor="#94A3B8"
                        android:textSize="13sp"
                        android:background="@drawable/task_chip_removable_bg"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/chipPlatformWebex"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingHorizontal="14dp"
                        android:text="Webex"
                        android:textColor="#94A3B8"
                        android:textSize="13sp"
                        android:background="@drawable/task_chip_removable_bg"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/chipPlatformOther"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingHorizontal="14dp"
                        android:text="Other"
                        android:textColor="#94A3B8"
                        android:textSize="13sp"
                        android:background="@drawable/task_chip_removable_bg" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- â”€â”€ Meeting Link (hidden until video platform selected) â”€â”€ -->
        <LinearLayout
            android:id="@+id/layoutMeetingLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/task_detail_section_bg"
                android:padding="12dp">

                <EditText
                    android:id="@+id/etMeetingLink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Paste meeting link..."
                    android:textColorHint="#4A4A6A"
                    android:textColor="#F1F5F9"
                    android:textSize="14sp"
                    android:background="@null"
                    android:inputType="textUri"
                    android:imeOptions="actionDone"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/btnTestLink"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="Test"
                    android:textColor="#6C63FF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/task_chip_removable_bg"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- â”€â”€ Location (hidden until In-Person selected) â”€â”€ -->
        <LinearLayout
            android:id="@+id/layoutLocationField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/task_detail_section_bg"
                android:padding="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    android:contentDescription="Location"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="10dp" />

                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Add location..."
                    android:textColorHint="#4A4A6A"
                    android:textColor="#F1F5F9"
                    android:textSize="14sp"
                    android:background="@null"
                    android:inputType="textPostalAddress"
                    android:imeOptions="actionNext"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <!-- â”€â”€ Date & Time â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date &amp; Time"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chipDateBtn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="ðŸ“… Select Date"
                    android:textColor="#F1F5F9"
                    android:textSize="13sp"
                    android:background="@drawable/task_detail_section_bg"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/chipStartTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Start"
                    android:textColor="#F1F5F9"
                    android:textSize="13sp"
                    android:background="@drawable/task_detail_section_bg"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/chipEndTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="End"
                    android:textColor="#F1F5F9"
                    android:textSize="13sp"
                    android:background="@drawable/task_detail_section_bg" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDurationCalc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:text="Duration: â€”" />
        </LinearLayout>

        <!-- â”€â”€ All Day Switch â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="All Day"
                android:textColor="#F1F5F9"
                android:textSize="15sp" />

            <Switch
                android:id="@+id/switchAllDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#6C63FF"
                android:trackTint="#2A2A4A" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E1E3A"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp" />

        <!-- â”€â”€ Attendees â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ‘¥  Attendees"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnAddAttendee"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="+ Add"
                    android:textColor="#6C63FF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/task_chip_removable_bg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attendeesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E1E3A"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp" />

        <!-- â”€â”€ Agenda â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“‹  Agenda"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnAddAgendaItem"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="+ Add Item"
                    android:textColor="#6C63FF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/task_chip_removable_bg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/agendaContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tvTotalAgendaDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:text="Total: 0 min" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E1E3A"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp" />

        <!-- â”€â”€ Recurrence â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_rotate"
                android:contentDescription="Recurrence"
                android:scaleType="centerInside"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recurrence"
                android:textColor="#F1F5F9"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvRecurrenceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Never"
                android:textColor="#9E9E9E"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/arrow_down_float"
                android:contentDescription="Expand"
                android:scaleType="centerInside"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E1E3A"
            android:layout_marginHorizontal="16dp" />

        <!-- â”€â”€ Reminders â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:contentDescription="Reminders"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reminders"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btnAddReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="+ Add"
                    android:textColor="#6C63FF"
                    android:textSize="12sp"
                    android:background="@drawable/task_chip_removable_bg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/remindersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E1E3A"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp" />

        <!-- â”€â”€ Color Picker â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <View
                android:id="@+id/viewColorDot"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/task_priority_pill_bg"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvColorHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change Color"
                android:textColor="#F1F5F9"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/arrow_down_float"
                android:contentDescription="Pick color"
                android:scaleType="centerInside" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E1E3A"
            android:layout_marginHorizontal="16dp" />

        <!-- â”€â”€ Category â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:contentDescription="Category"
                android:scaleType="centerInside"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category"
                android:textColor="#F1F5F9"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCategoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textColor="#9E9E9E"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/arrow_down_float"
                android:contentDescription="Expand"
                android:scaleType="centerInside"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E1E3A"
            android:layout_marginHorizontal="16dp" />

        <!-- â”€â”€ Notes â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“  Notes"
                android:textColor="#F1F5F9"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/etMeetingNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:hint="Pre-meeting notes..."
                android:textColorHint="#4A4A6A"
                android:textColor="#F1F5F9"
                android:textSize="14sp"
                android:inputType="textMultiLine|textCapSentences"
                android:gravity="top|start"
                android:background="@drawable/task_detail_section_bg"
                android:padding="12dp"
                android:minLines="4"
                android:maxLines="12" />
        </LinearLayout>

        <!-- â”€â”€ Save Button (bottom) â”€â”€ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/btnSaveMeeting"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:text="Save Meeting"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/task_save_btn_bg" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
