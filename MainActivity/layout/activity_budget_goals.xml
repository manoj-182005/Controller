<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- â•â•â• TOOLBAR â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnBackBudget"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="â€¹"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŽ¯ Budget Goals"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btnBudgetHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="History"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#C084FC"
                    android:backgroundTint="#1E1B4B"
                    app:cornerRadius="12dp"
                    android:paddingHorizontal="14dp" />
            </LinearLayout>

            <!-- â•â•â• BUDGET HEALTH CARD â•â•â• -->
            <LinearLayout
                android:id="@+id/budgetHealthCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/budget_health_card_bg"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <com.prajwal.myfirstapp.expenses.BudgetHealthRingView
                    android:id="@+id/healthRing"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BUDGET HEALTH"
                        android:textSize="11sp"
                        android:textColor="#7C3AED"
                        android:letterSpacing="0.15"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvHealthLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Excellent"
                        android:textColor="#22C55E"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Budgeted"
                            android:textColor="#6B7B8D"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvTotalBudgeted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#B0B8CC"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spent"
                            android:textColor="#6B7B8D"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvTotalSpent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â• CATEGORY BUDGET CARDS â•â•â• -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CATEGORY BUDGETS"
                android:textSize="11sp"
                android:textColor="#7C3AED"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/budgetCardsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

            <!-- â•â•â• CATEGORIES WITHOUT BUDGET â•â•â• -->
            <LinearLayout
                android:id="@+id/noBudgetSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SET A BUDGET"
                    android:textSize="11sp"
                    android:textColor="#6B7B8D"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/noBudgetCardsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- â•â•â• BUDGET VS ACTUAL CHART â•â•â• -->
            <LinearLayout
                android:id="@+id/comparisonChartCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUDGET VS ACTUAL"
                    android:textSize="11sp"
                    android:textColor="#7C3AED"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <com.prajwal.myfirstapp.expenses.BudgetComparisonChartView
                        android:id="@+id/comparisonChart"
                        android:layout_width="wrap_content"
                        android:layout_height="220dp" />
                </HorizontalScrollView>

                <!-- Legend -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#407C3AED" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Budget  "
                        android:textColor="#6B7B8D"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#7C3AED" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Actual"
                        android:textColor="#6B7B8D"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â• EMPTY STATE â•â•â• -->
            <TextView
                android:id="@+id/tvNoBudgets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯ No budget goals set yet\nSet budgets for your categories to start tracking"
                android:textColor="#4B5563"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="40dp"
                android:background="@drawable/glass_card_bg"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
