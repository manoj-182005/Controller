<?xml version="1.0" encoding="utf-8"?>
<!-- Agenda item row in meeting detail (read mode) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="8dp">

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/cbAgendaItem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:buttonTint="#6C63FF"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:layout_marginEnd="10dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvAgendaDetailTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Agenda item title"
        android:textColor="#F1F5F9"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginEnd="8dp" />

    <!-- Duration chip -->
    <TextView
        android:id="@+id/tvAgendaDetailDuration"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:text="10 min"
        android:textColor="#94A3B8"
        android:textSize="11sp"
        android:background="@drawable/task_chip_removable_bg"
        android:layout_marginEnd="8dp" />

    <!-- Presenter text -->
    <TextView
        android:id="@+id/tvAgendaDetailPresenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presenter"
        android:textColor="#9E9E9E"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:visibility="gone" />

</LinearLayout>
