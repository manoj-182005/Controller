<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- â•â•â• TOOLBAR â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnBackExpense"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="â€¹"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ’° Expense Tracker"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btnSetBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Budget"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#C084FC"
                    android:backgroundTint="#1E1B4B"
                    app:cornerRadius="12dp"
                    android:paddingHorizontal="14dp" />
            </LinearLayout>

            <!-- â•â•â• TOP SUMMARY CARD â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="20dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TODAY'S SPENDING"
                    android:textSize="11sp"
                    android:textColor="#7C3AED"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvTodaySpend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹0"
                        android:textColor="#FFFFFF"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvYesterdayCompare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vs â‚¹0 yesterday"
                        android:textColor="#6B7B8D"
                        android:textSize="12sp"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Week comparison -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This Week"
                            android:textColor="#6B7B8D"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvWeekSpend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹0"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvWeekChange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp"
                                android:layout_marginStart="6dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Week"
                            android:textColor="#6B7B8D"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvLastWeekSpend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#9CA3AF"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Monthly budget progress -->
                <LinearLayout
                    android:id="@+id/budgetSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Monthly Budget"
                            android:textColor="#6B7B8D"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvBudgetLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#B0B8CC"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@drawable/expense_progress_bg">

                        <View
                            android:id="@+id/budgetProgressBar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="#7C3AED" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvBudgetStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="11sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â• 7-DAY BAR CHART â•â•â• -->

            <!-- â•â•â• NAVIGATION: WALLETS, SUBSCRIPTIONS & BUDGET GOALS â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="14dp">

                <!-- Wallets Card -->
                <LinearLayout
                    android:id="@+id/btnWallets"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_wallet_bg"
                    android:padding="14dp"
                    android:layout_marginEnd="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’³"
                        android:textSize="22sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallets"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage accounts"
                        android:textColor="#6B7B8D"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- Subscriptions Card -->
                <LinearLayout
                    android:id="@+id/btnSubscriptions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/glass_card_bg"
                    android:padding="14dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”„"
                        android:textSize="22sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subscriptions"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recurring expenses"
                        android:textColor="#6B7B8D"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- Budget Goals Card -->
                <LinearLayout
                    android:id="@+id/btnBudgetGoals"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/glass_card_bg"
                    android:padding="14dp"
                    android:layout_marginStart="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯"
                        android:textSize="22sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget Goals"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category budgets"
                        android:textColor="#6B7B8D"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â• NAVIGATION ROW 2: SPLIT BILLS & EXPORT â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="14dp">

                <!-- Split Bills Card -->
                <LinearLayout
                    android:id="@+id/btnSplitBills"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/glass_card_bg"
                    android:padding="14dp"
                    android:layout_marginEnd="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ‚ï¸"
                        android:textSize="22sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Split Bills"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group expenses"
                        android:textColor="#6B7B8D"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- Export Data Card -->
                <LinearLayout
                    android:id="@+id/btnExport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/glass_card_bg"
                    android:padding="14dp"
                    android:layout_marginStart="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š"
                        android:textSize="22sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Export"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CSV &amp; PDF reports"
                        android:textColor="#6B7B8D"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â• IOU OVERDUE BANNER â•â•â• -->
            <LinearLayout
                android:id="@+id/iouOverdueBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/iou_overdue_card_bg"
                android:padding="12dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvIouOverdueBanner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âš ï¸ You have overdue IOUs â€” tap to view"
                    android:textColor="#EF4444"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€º"
                    android:textColor="#EF4444"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- â•â•â• NAVIGATION ROW 3: BORROW & LEND â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="14dp">

                <LinearLayout
                    android:id="@+id/btnBorrowLend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/glass_card_bg"
                    android:padding="14dp"
                    android:layout_marginEnd="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¤"
                        android:textSize="22sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Borrow &amp; Lend"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IOUs &amp; debts"
                        android:textColor="#6B7B8D"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- Income Tracker Card -->
                <LinearLayout
                    android:id="@+id/btnIncomeTracker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/income_summary_card_bg"
                    android:padding="14dp"
                    android:layout_marginStart="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’°"
                        android:textSize="22sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Income Tracker"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIncomeTrackerSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track earnings"
                        android:textColor="#86EFAC"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â• 7-DAY BAR CHART â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAILY SPENDING"
                    android:textSize="11sp"
                    android:textColor="#7C3AED"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <com.prajwal.myfirstapp.ExpenseChartView
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>

            <!-- â•â•â• DONUT CHART â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPENDING BY CATEGORY"
                    android:textSize="11sp"
                    android:textColor="#7C3AED"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <com.prajwal.myfirstapp.ExpenseDonutView
                    android:id="@+id/donutChart"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />
            </LinearLayout>

            <!-- â•â•â• LINE CHART â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MONTHLY TRENDS"
                    android:textSize="11sp"
                    android:textColor="#7C3AED"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <com.prajwal.myfirstapp.ExpenseLineChartView
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>

            <!-- â•â•â• INSIGHTS CARD â•â•â• -->
            <LinearLayout
                android:id="@+id/insightsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ INSIGHTS"
                    android:textSize="11sp"
                    android:textColor="#F59E0B"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tvInsight1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#E0E7FF"
                    android:textSize="13sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvInsight2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#E0E7FF"
                    android:textSize="13sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvInsight3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#E0E7FF"
                    android:textSize="13sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- â•â•â• WALLET FILTER â•â•â• -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="6dp">

                <LinearLayout
                    android:id="@+id/walletFilterContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- â•â•â• FILTER CHIPS â•â•â• -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/filterChipContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- â•â•â• TRANSACTIONS LIST â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECENT TRANSACTIONS"
                    android:textSize="11sp"
                    android:textColor="#7C3AED"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="10dp" />

                <ListView
                    android:id="@+id/transactionList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="4dp"
                    android:scrollbars="none"
                    android:nestedScrollingEnabled="true" />

                <TextView
                    android:id="@+id/tvEmptyTransactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No transactions yet.\nTap + to add your first expense!"
                    android:textColor="#4B5563"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="30dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- â•â•â• FAB â•â•â• -->
    <TextView
        android:id="@+id/fabAddExpense"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/expense_fab_bg"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>
