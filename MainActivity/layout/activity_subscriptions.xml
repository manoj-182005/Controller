<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- â•â•â• TOOLBAR â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnBackSubscriptions"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="â€¹"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ”„ Subscriptions"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- â•â•â• HEADER SUMMARY CARD â•â•â• -->
            <LinearLayout
                android:id="@+id/subscriptionHeaderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/subscription_header_bg"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECURRING COSTS"
                    android:textSize="11sp"
                    android:textColor="#C4B5FD"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTotalMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹0"
                    android:textColor="#FFFFFF"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="per month"
                    android:textColor="#A78BFA"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvTotalYearly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹0 / year"
                    android:textColor="#8B7BC8"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvActiveCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 active"
                        android:textColor="#C4B5FD"
                        android:textSize="12sp"
                        android:background="@drawable/subscription_pill_bg"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp" />

                    <TextView
                        android:id="@+id/tvDueSoonWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FBBF24"
                        android:textSize="12sp"
                        android:layout_marginStart="12dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â• UPCOMING RENEWALS â•â•â• -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPCOMING RENEWALS"
                android:textSize="11sp"
                android:textColor="#7C3AED"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:id="@+id/upcomingScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/upcomingContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/tvNoUpcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ¨ No upcoming renewals in the next 30 days"
                android:textColor="#4B5563"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="20dp"
                android:background="@drawable/glass_card_bg"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- â•â•â• ACTIVE SUBSCRIPTIONS â•â•â• -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVE SUBSCRIPTIONS"
                android:textSize="11sp"
                android:textColor="#7C3AED"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/activeSubscriptionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvNoSubscriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”„ No subscriptions yet\nTap + to add your first subscription"
                android:textColor="#4B5563"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="40dp"
                android:background="@drawable/glass_card_bg"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- â•â•â• PAUSED SUBSCRIPTIONS (Collapsible) â•â•â• -->
            <LinearLayout
                android:id="@+id/pausedSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/pausedHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/glass_card_bg"
                    android:padding="14dp"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PAUSED SUBSCRIPTIONS"
                        android:textSize="11sp"
                        android:textColor="#F59E0B"
                        android:letterSpacing="0.15"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvPausedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#6B7B8D"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvPausedToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" â–¼"
                        android:textColor="#6B7B8D"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pausedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- â•â•â• CATEGORY BREAKDOWN DONUT â•â•â• -->
            <LinearLayout
                android:id="@+id/categoryBreakdownCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CATEGORY BREAKDOWN"
                    android:textSize="11sp"
                    android:textColor="#7C3AED"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <com.prajwal.myfirstapp.expenses.ExpenseDonutView
                    android:id="@+id/subscriptionDonut"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />
            </LinearLayout>

            <!-- â•â•â• MONTHLY COST TREND â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MONTHLY COST TREND"
                    android:textSize="11sp"
                    android:textColor="#7C3AED"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <com.prajwal.myfirstapp.expenses.SubscriptionTrendChartView
                    android:id="@+id/trendChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- â•â•â• FAB â•â•â• -->
    <TextView
        android:id="@+id/fabAddSubscription"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/expense_fab_bg"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>
