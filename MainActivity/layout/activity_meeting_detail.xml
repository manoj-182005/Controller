<?xml version="1.0" encoding="utf-8"?>
<!-- Meeting Detail Screen -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12122A">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- â”€â”€ Colored Header â”€â”€ -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1E1E3A"
                android:paddingBottom="20dp">

                <!-- Top controls row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_revert"
                        android:contentDescription="Back"
                        android:scaleType="centerInside"
                        android:padding="6dp"
                        android:background="@drawable/task_icon_circle_bg" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/btnStar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="â˜†"
                        android:textSize="22sp"
                        android:layout_marginEnd="4dp" />

                    <ImageView
                        android:id="@+id/btnOverflow"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:contentDescription="More options"
                        android:scaleType="centerInside"
                        android:padding="6dp"
                        android:background="@drawable/task_icon_circle_bg" />
                </LinearLayout>

                <!-- Type icon + Title + Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/ivMeetingTypeIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:contentDescription="Meeting type"
                        android:scaleType="centerInside"
                        android:padding="6dp"
                        android:background="@drawable/task_icon_circle_bg"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMeetingTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#F1F5F9"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/tvStatusBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:text="Upcoming"
                            android:textColor="#F1F5F9"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:background="@drawable/task_priority_pill_bg" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Join Meeting button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:id="@+id/btnJoinMeeting"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:gravity="center"
                        android:text="ðŸŽ¥  Join Meeting"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/task_save_btn_bg"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <!-- â”€â”€ Info Row â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:padding="16dp">

                <!-- Date/time + duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:contentDescription="Date"
                        android:scaleType="centerInside"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tvDateTimeRange"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#F1F5F9"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:background="@drawable/task_chip_removable_bg" />
                </LinearLayout>

                <!-- Platform badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:contentDescription="Platform"
                        android:scaleType="centerInside"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tvPlatformBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#60A5FA"
                        android:textSize="13sp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/ic_menu_mapmode"
                        android:contentDescription="Location"
                        android:scaleType="centerInside"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9E9E9E"
                        android:textSize="13sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <!-- â”€â”€ Attendees Section â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ‘¥  Attendees"
                        android:textColor="#F1F5F9"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btnInvite"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:text="+ Invite"
                        android:textColor="#6C63FF"
                        android:textSize="12sp"
                        android:background="@drawable/task_chip_removable_bg" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/attendeesRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>

            <!-- â”€â”€ Agenda Section â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“‹  Agenda"
                        android:textColor="#F1F5F9"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/agendaProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#60A5FA"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/agendaContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/btnAddAgendaItem"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="+ Add Agenda Item"
                    android:textColor="#6C63FF"
                    android:textSize="13sp"
                    android:background="@drawable/task_chip_removable_bg"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- â”€â”€ Live Timer Section â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±  Meeting Timer"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvLiveTimer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00:00:00"
                        android:textColor="#F1F5F9"
                        android:textSize="36sp"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/btnTimerControl"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:gravity="center"
                        android:text="â–¶"
                        android:textColor="#66BB6A"
                        android:textSize="22sp"
                        android:background="@drawable/task_timer_btn_bg" />
                </LinearLayout>
            </LinearLayout>

            <!-- â”€â”€ Meeting Notes â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“  Meeting Notes"
                        android:textColor="#F1F5F9"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNotesSaved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saved"
                        android:textColor="#66BB6A"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etMeetingNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dp"
                    android:hint="Type meeting notes here..."
                    android:hintTextColor="#4A4A6A"
                    android:textColor="#F1F5F9"
                    android:textSize="14sp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:background="@null"
                    android:minLines="5"
                    android:maxLines="20" />
            </LinearLayout>

            <!-- â”€â”€ Action Items â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âœ…  Action Items"
                        android:textColor="#F1F5F9"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btnAddActionItem"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:text="+ Add"
                        android:textColor="#6C63FF"
                        android:textSize="12sp"
                        android:background="@drawable/task_chip_removable_bg" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/actionItemsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- â”€â”€ Post-Meeting Summary (initially gone) â”€â”€ -->
            <LinearLayout
                android:id="@+id/summarySection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š  Post-Meeting Summary"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tvSummaryStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#94A3B8"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/btnShareSummary"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="ðŸ“¤  Share Summary"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/task_save_btn_bg" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
