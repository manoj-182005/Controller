<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Server Name Input -->
    <EditText
        android:id="@+id/serverNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Server Name"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textColorHint="#666666"
        android:layout_marginBottom="16dp"/>

    <!-- Server IP Input -->
    <EditText
        android:id="@+id/serverIpInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Server IP (e.g., 192.168.1.100)"
        android:inputType="text"
        android:digits="0123456789."
        android:maxLines="1"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:textColorHint="#666666"
        android:layout_marginBottom="16dp"/>

    <!-- Set as Default Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set as default server"
            android:textSize="16sp"
            android:textColor="#333333"/>

        <Switch
            android:id="@+id/setDefaultSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="#4CAF50"
            android:trackTint="#CCCCCC"/>

    </LinearLayout>

</LinearLayout>
