<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- â•â•â• TOOLBAR â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="â€¹"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp">

                    <TextView
                        android:id="@+id/tvGroupName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group Name"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvGroupMemberCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 members"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="ðŸ“¤"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnMoreOptions"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="â‹®"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- â•â•â• TOTAL + YOUR BALANCE CARD â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/split_header_bg"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Spent"
                            android:textColor="#B0B0B0"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvTotalSpent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#FFFFFF"
                            android:textSize="26sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Balance"
                            android:textColor="#B0B0B0"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvYourBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#22C55E"
                            android:textSize="26sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â• TAB BAR â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/split_group_card_bg"
                android:padding="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tabBalances"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Balances"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/split_chip_selected_bg" />

                <TextView
                    android:id="@+id/tabExpenses"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Expenses"
                    android:textColor="#9CA3AF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tabSettlements"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Settled"
                    android:textColor="#9CA3AF"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- â•â•â• TAB CONTENT: BALANCES â•â•â• -->
            <LinearLayout
                android:id="@+id/contentBalances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Simplified debts -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simplified Debts"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/debtsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/tvAllSettled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Everyone is settled up!"
                    android:textColor="#22C55E"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:padding="30dp"
                    android:visibility="gone" />

                <!-- Member balances breakdown -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member Balances"
                    android:textColor="#9CA3AF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/memberBalancesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- â•â•â• TAB CONTENT: EXPENSES â•â•â• -->
            <LinearLayout
                android:id="@+id/contentExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/expensesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/tvNoExpenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No expenses yet.\nTap + to add one!"
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="40dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- â•â•â• TAB CONTENT: SETTLEMENTS â•â•â• -->
            <LinearLayout
                android:id="@+id/contentSettlements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/settlementsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/tvNoSettlements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No settlements recorded yet."
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="40dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- FAB: Add Expense -->
    <Button
        android:id="@+id/fabAddExpense"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/split_fab_bg"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        android:elevation="8dp" />

</FrameLayout>
