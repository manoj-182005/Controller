<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/task_trash_card_bg"
    android:padding="14dp"
    android:layout_marginBottom="8dp">

    <!-- Title row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ—‘ï¸"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvTrashTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Task title"
            android:textColor="#FCA5A5"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvDaysLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28d left"
            android:textColor="#94A3B8"
            android:textSize="11sp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Description preview -->
    <TextView
        android:id="@+id/tvTrashDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description..."
        android:textColor="#6B7280"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

    <!-- Meta line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tvTrashPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:textColor="#94A3B8"
            android:textSize="10sp"
            android:background="@drawable/task_stat_pill_bg"
            android:paddingHorizontal="6dp"
            android:paddingVertical="1dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvTrashDeletedDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deleted Jan 1"
            android:textColor="#6B7280"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/btnRestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restore"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/task_restore_btn_bg"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/btnDeletePermanent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/task_clear_trash_btn_bg"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp" />
    </LinearLayout>
</LinearLayout>
