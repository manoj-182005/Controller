<?xml version="1.0" encoding="utf-8"?>
<!-- Note card for staggered masonry grid -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/cardRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/notes_card_bg"
        android:elevation="4dp"
        android:minHeight="85dp">

        <!-- Left accent border (thicker, rounded) -->
        <View
            android:id="@+id/leftAccent"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#F59E0B" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- Category badge at top -->
            <TextView
                android:id="@+id/tvNoteCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:layout_marginBottom="6dp"
                android:visibility="gone" />

            <!-- Top Row: Title + Pin/Lock/Reminder icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNoteTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Note Title"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvPinIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Œ"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_marginStart="4dp" />

                <TextView
                    android:id="@+id/tvReminderIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ””"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Content Preview -->
            <TextView
                android:id="@+id/tvNotePreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note content preview..."
                android:textColor="#94A3B8"
                android:textSize="13sp"
                android:maxLines="4"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="6dp" />

            <!-- Tags Row -->
            <LinearLayout
                android:id="@+id/tagsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <!-- Bottom Row: folder chip + date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <!-- Folder chip -->
                <TextView
                    android:id="@+id/tvNoteFolderChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#94A3B8"
                    android:textSize="10sp"
                    android:background="@drawable/notes_tag_chip_bg"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:visibility="gone" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Date -->
                <TextView
                    android:id="@+id/tvNoteDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h ago"
                    android:textColor="#475569"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Selection checkbox (hidden, shown in multi-select mode) -->
    <CheckBox
        android:id="@+id/cbSelect"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:buttonTint="#F59E0B" />

    <!-- Lock overlay -->
    <FrameLayout
        android:id="@+id/lockOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/notes_locked_overlay_bg"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_lock_idle_lock"
                android:tint="#94A3B8"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locked"
                android:textColor="#94A3B8"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
