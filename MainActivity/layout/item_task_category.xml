<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/task_category_card_bg"
    android:padding="14dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Color indicator -->
    <View
        android:id="@+id/viewCategoryColor"
        android:layout_width="12dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="#667EEA" />

    <!-- Icon -->
    <TextView
        android:id="@+id/tvCategoryIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:text="ðŸ“"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/task_icon_circle_bg"
        android:layout_marginEnd="12dp" />

    <!-- Name + count -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal"
            android:textColor="#F1F5F9"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvCategoryTaskCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 tasks"
            android:textColor="#94A3B8"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Default badge -->
    <TextView
        android:id="@+id/tvDefaultBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEFAULT"
        android:textColor="#94A3B8"
        android:textSize="9sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.1"
        android:background="@drawable/task_stat_pill_bg"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone" />

    <!-- More menu -->
    <ImageView
        android:id="@+id/btnCategoryMenu"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@android:drawable/ic_menu_more"
        android:padding="4dp"
        android:contentDescription="Category menu" />
</LinearLayout>
