<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F0F14">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#1A1A2E"
        android:paddingStart="4dp"
        android:paddingEnd="8dp">

        <Button
            android:id="@+id/btnViewerBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="â†"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="0dp" />

        <TextView
            android:id="@+id/tvViewerFileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="File"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingStart="4dp" />

        <Button
            android:id="@+id/btnViewerShare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â¬†"
            android:textSize="16sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="0dp" />

        <Button
            android:id="@+id/btnViewerMore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â‹®"
            android:textSize="20sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="0dp" />
    </LinearLayout>

    <!-- Content frame -->
    <FrameLayout
        android:id="@+id/viewerContentFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Image viewer -->
        <ScrollView
            android:id="@+id/imageViewerSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivImageViewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </ScrollView>

        <!-- Code viewer -->
        <LinearLayout
            android:id="@+id/codeViewerSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Code toolbar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#12121E"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/tvCodeLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEXT"
                    android:textColor="#8B5CF6"
                    android:textSize="11sp"
                    android:background="#2D2060"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

                <Button
                    android:id="@+id/btnCodeFontMinus"
                    android:layout_width="36dp"
                    android:layout_height="32dp"
                    android:text="A-"
                    android:textColor="#94A3B8"
                    android:textSize="12sp"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <Button
                    android:id="@+id/btnCodeFontPlus"
                    android:layout_width="36dp"
                    android:layout_height="32dp"
                    android:text="A+"
                    android:textColor="#94A3B8"
                    android:textSize="12sp"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <Button
                    android:id="@+id/btnCodeCopyAll"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Copy"
                    android:textColor="#8B5CF6"
                    android:textSize="12sp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCodeContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#E2E8F0"
                        android:textSize="13sp"
                        android:fontFamily="monospace"
                        android:padding="12dp"
                        android:lineSpacingMultiplier="1.4" />
                </HorizontalScrollView>
            </ScrollView>
        </LinearLayout>

        <!-- Text / doc viewer -->
        <LinearLayout
            android:id="@+id/textViewerSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvTextContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#E2E8F0"
                    android:textSize="15sp"
                    android:padding="20dp"
                    android:lineSpacingMultiplier="1.6" />
            </ScrollView>
        </LinearLayout>

        <!-- Unsupported section -->
        <LinearLayout
            android:id="@+id/unsupportedSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvUnsupportedIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“„"
                android:textSize="72sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvUnsupportedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Name"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvUnsupportedDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type Â· Size"
                android:textColor="#94A3B8"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/btnOpenExternal"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Open with External App"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:backgroundTint="#8B5CF6" />
        </LinearLayout>

    </FrameLayout>

    <!-- File info trigger -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A1A2E">

        <Button
            android:id="@+id/btnFileInfo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="File Info â–²"
            android:textColor="#8B5CF6"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackground" />

        <!-- File info panel -->
        <LinearLayout
            android:id="@+id/fileInfoPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#64748B"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvInfoName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â€”"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textColor="#64748B"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvInfoType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â€”"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textColor="#64748B"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvInfoSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â€”"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#64748B"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvInfoDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â€”"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Path"
                    android:textColor="#64748B"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvInfoPath"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â€”"
                    android:textColor="#94A3B8"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
