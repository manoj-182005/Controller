<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A0E21">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical"
        android:background="#0F172A">

        <!-- Lock icon + title -->
        <TextView
            android:id="@+id/tvVaultStatusIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”“"
            android:textSize="22sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Personal Vault"
            android:textColor="#F1F5F9"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Session timer -->
        <TextView
            android:id="@+id/tvSessionTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locks in 2:00"
            android:textColor="#10B981"
            android:textSize="12sp"
            android:paddingStart="8dp"
            android:paddingEnd="4dp" />

        <!-- Search -->
        <Button
            android:id="@+id/btnVaultSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ”"
            android:textSize="18sp"
            android:background="@android:color/transparent" />

        <!-- Settings -->
        <Button
            android:id="@+id/btnVaultSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="âš™ï¸"
            android:textSize="18sp"
            android:background="@android:color/transparent" />

        <!-- Back -->
        <Button
            android:id="@+id/btnVaultBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="âœ•"
            android:textSize="18sp"
            android:textColor="#94A3B8"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- â”€â”€â”€ Storage Summary Card â”€â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:background="#1E293B"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vault Storage"
                        android:textColor="#F1F5F9"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTotalFiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 files"
                        android:textColor="#64748B"
                        android:textSize="13sp" />

                </LinearLayout>

                <!-- Segmented storage bar -->
                <LinearLayout
                    android:id="@+id/storageBar"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:orientation="horizontal"
                    android:clipToOutline="true"
                    android:layout_marginBottom="12dp" />

                <!-- Storage breakdown legend -->
                <LinearLayout
                    android:id="@+id/storageLegend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStorageUsed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0 MB used"
                        android:textColor="#94A3B8"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvStorageAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#64748B"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- â”€â”€â”€ Quick Access Row â”€â”€â”€ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Access"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp">

                <!-- Photos -->
                <LinearLayout
                    android:id="@+id/btnQuickPhotos"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:background="#1E293B">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="ðŸ–¼ï¸" android:textSize="28sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Photos" android:textColor="#F1F5F9" android:textSize="11sp" />
                    <TextView android:id="@+id/tvPhotosCount"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="0" android:textColor="#3B82F6" android:textSize="11sp" android:textStyle="bold" />
                </LinearLayout>

                <!-- Videos -->
                <LinearLayout
                    android:id="@+id/btnQuickVideos"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:background="#1E293B">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="ðŸŽ¬" android:textSize="28sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Videos" android:textColor="#F1F5F9" android:textSize="11sp" />
                    <TextView android:id="@+id/tvVideosCount"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="0" android:textColor="#8B5CF6" android:textSize="11sp" android:textStyle="bold" />
                </LinearLayout>

                <!-- Audio -->
                <LinearLayout
                    android:id="@+id/btnQuickAudio"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:background="#1E293B">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="ðŸŽµ" android:textSize="28sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Audio" android:textColor="#F1F5F9" android:textSize="11sp" />
                    <TextView android:id="@+id/tvAudioCount"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="0" android:textColor="#10B981" android:textSize="11sp" android:textStyle="bold" />
                </LinearLayout>

                <!-- Documents -->
                <LinearLayout
                    android:id="@+id/btnQuickDocs"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:background="#1E293B">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="ðŸ“„" android:textSize="28sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Docs" android:textColor="#F1F5F9" android:textSize="11sp" />
                    <TextView android:id="@+id/tvDocsCount"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="0" android:textColor="#F59E0B" android:textSize="11sp" android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <!-- â”€â”€â”€ Albums Section â”€â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Albums"
                    android:textColor="#F1F5F9"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvViewAllAlbums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All â†’"
                    android:textColor="#F59E0B"
                    android:textSize="13sp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:id="@+id/albumsStrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

            <!-- â”€â”€â”€ Favourites Strip â”€â”€â”€ -->
            <LinearLayout
                android:id="@+id/favouritesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â­ Favourites"
                        android:textColor="#F1F5F9"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:id="@+id/favouritesStrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </HorizontalScrollView>

            </LinearLayout>

            <!-- â”€â”€â”€ Recently Added â”€â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recently Added"
                    android:textColor="#F1F5F9"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvViewAllFiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All â†’"
                    android:textColor="#F59E0B"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- 3-column recent files grid -->
            <GridLayout
                android:id="@+id/recentFilesGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:useDefaultMargins="false" />

            <!-- Empty state -->
            <LinearLayout
                android:id="@+id/vaultEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="48dp"
                android:paddingBottom="48dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’"
                    android:textSize="48sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your vault is empty"
                    android:textColor="#F1F5F9"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap + to import your first file"
                    android:textColor="#64748B"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- FAB: Import File -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#0A0E21">

        <Button
            android:id="@+id/fabImportFile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:text="+"
            android:textSize="28sp"
            android:textColor="#0A0E21"
            android:textStyle="bold"
            android:backgroundTint="#F59E0B" />

    </FrameLayout>

</LinearLayout>
