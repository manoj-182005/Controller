<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/glass_card_bg"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ’¸ Settle Up"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- From â†’ To visual -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <!-- From member -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvFromAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/split_avatar_bg"
                android:gravity="center"
                android:text="AB"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFromName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:maxWidth="80dp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  â†’  "
            android:textColor="#7C3AED"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- To member -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvToAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/split_avatar_bg"
                android:gravity="center"
                android:text="CD"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvToName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:maxWidth="80dp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Amount -->
    <EditText
        android:id="@+id/etSettleAmount"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/edit_text_background"
        android:hint="Amount (â‚¹)"
        android:textColor="#FFFFFF"
        android:textColorHint="#6B7280"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginBottom="12dp" />

    <!-- Notes -->
    <EditText
        android:id="@+id/etSettleNotes"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edit_text_background"
        android:hint="Notes (optional)"
        android:textColor="#FFFFFF"
        android:textColorHint="#6B7280"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:layout_marginBottom="20dp" />

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirmSettle"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/split_settle_btn_bg"
        android:text="âœ“ Record Settlement"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false" />

</LinearLayout>
