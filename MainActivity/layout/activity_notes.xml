<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_gradient_bg">

    <!-- â•â•â• TOOLBAR â•â•â• -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp">

        <Button
            android:id="@+id/btnBackNotes"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="â€¹"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNotesTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“ Notes"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvNoteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 notes"
            android:textColor="#6B7B8D"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/presenter_btn_dark"
            android:paddingHorizontal="14dp"
            android:paddingVertical="6dp" />

        <Button
            android:id="@+id/btnSyncNotes"
            android:layout_width="46dp"
            android:layout_height="42dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="ðŸ”„"
            android:textSize="20sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- â•â•â• BREADCRUMB BAR â•â•â• -->
    <LinearLayout
        android:id="@+id/breadcrumbBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="6dp"
        android:background="#0D1117">

        <Button
            android:id="@+id/btnNavBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="â—€"
            android:textSize="16sp"
            android:textColor="#90CAF9"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvBreadcrumb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“š Notes"
            android:textColor="#94A3B8"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- â•â•â• SEARCH BAR â•â•â• -->
    <EditText
        android:id="@+id/etSearchNotes"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="ðŸ” Search notes..."
        android:textColorHint="#475569"
        android:textColor="#E2E8F0"
        android:textSize="14sp"
        android:background="@drawable/task_input_bg"
        android:paddingHorizontal="16dp"
        android:singleLine="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- â•â•â• NOTES LIST â•â•â• -->
    <ListView
        android:id="@+id/notesListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="6dp"
        android:scrollbars="none"
        android:paddingHorizontal="16dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false" />

    <!-- â•â•â• EDITOR VIEW (hidden, shown when editing a note) â•â•â• -->
    <LinearLayout
        android:id="@+id/editorView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp">

        <!-- Note Title -->
        <EditText
            android:id="@+id/etNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note title..."
            android:textColorHint="#475569"
            android:textColor="#F1F5F9"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:paddingVertical="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E293B"
            android:layout_marginVertical="4dp" />

        <!-- Note Content -->
        <EditText
            android:id="@+id/etNoteContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Start writing..."
            android:textColorHint="#475569"
            android:textColor="#E2E8F0"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:padding="4dp" />

        <!-- Editor Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tvWordCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 words"
                android:textColor="#64748B"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnSaveNote"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="ðŸ’¾ Save and Sync"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2E7D32"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- â•â•â• FAB: Add New â•â•â• -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:backgroundTint="#F59E0B"
        app:tint="#FFFFFF"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add Note" />

</LinearLayout>
