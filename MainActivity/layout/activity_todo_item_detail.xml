<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- â•â•â• HEADER â•â•â• -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/task_detail_header_bg"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp">

            <!-- Top action row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnItemBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_revert"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:contentDescription="Back" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvPriorityBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HIGH"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/task_priority_pill_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/btnEditItem"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="#94A3B8"
                    android:scaleType="centerInside"
                    android:contentDescription="Edit" />

            </LinearLayout>

            <!-- Task title -->
            <TextView
                android:id="@+id/tvItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="12dp" />

            <!-- Task description -->
            <TextView
                android:id="@+id/tvItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#94A3B8"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="6dp"
                android:lineSpacingMultiplier="1.4"
                android:visibility="gone" />

        </LinearLayout>

        <!-- â•â•â• METADATA CARD â•â•â• -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Due date row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:text="ðŸ“…"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Due date"
                        android:textColor="#64748B"
                        android:textSize="13sp"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:id="@+id/tvDueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not set"
                        android:textColor="#E2E8F0"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#263348" />

                <!-- Reminder row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:text="ðŸ””"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reminder"
                        android:textColor="#64748B"
                        android:textSize="13sp"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:id="@+id/tvReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textColor="#E2E8F0"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#263348" />

                <!-- Recurrence row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:text="ðŸ”"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recurrence"
                        android:textColor="#64748B"
                        android:textSize="13sp"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:id="@+id/tvRecurrence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textColor="#E2E8F0"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#263348" />

                <!-- Estimated duration row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:text="â±ï¸"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estimated time"
                        android:textColor="#64748B"
                        android:textSize="13sp"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:id="@+id/tvEstDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€”"
                        android:textColor="#E2E8F0"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Tags row -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:id="@+id/tagsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical" />

                </HorizontalScrollView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- â•â•â• SUBTASKS CARD â•â•â• -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Subtasks header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subtasks"
                        android:textColor="#E2E8F0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvSubtaskCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="#94A3B8"
                        android:textSize="13sp"
                        android:background="@drawable/task_stat_pill_bg"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSubtasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Add subtask button -->
                <TextView
                    android:id="@+id/btnAddSubtask"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="+ Add subtask"
                    android:textColor="#3B82F6"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- â•â•â• TIMER CARD â•â•â• -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Timer header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus Timer"
                    android:textColor="#E2E8F0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <!-- Timer display -->
                <TextView
                    android:id="@+id/tvTimerDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <!-- Start/Stop button -->
                <Button
                    android:id="@+id/btnTimer"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="â–¶  Start"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:background="@drawable/task_timer_btn_bg"
                    android:layout_marginBottom="12dp" />

                <!-- Total time tracked -->
                <TextView
                    android:id="@+id/tvTotalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total tracked: 0m"
                    android:textColor="#94A3B8"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Session history -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTimerSessions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="200dp"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- â•â•â• COMPLETE BUTTON â•â•â• -->
        <Button
            android:id="@+id/btnCompleteTask"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:text="âœ“  Mark as Complete"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/task_save_btn_bg" />

        <!-- â•â•â• ADD TO CALENDAR BUTTON â•â•â• -->
        <Button
            android:id="@+id/btnAddToCalendar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="ðŸ“…  Add to Calendar"
            android:textColor="#F1F5F9"
            android:textSize="15sp"
            android:backgroundTint="#1E293B" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
