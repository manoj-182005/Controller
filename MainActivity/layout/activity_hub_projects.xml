<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F0F14">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#1A1A2E"
        android:paddingStart="4dp"
        android:paddingEnd="8dp">

        <Button
            android:id="@+id/btnProjectsBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="â†"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="0dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Projects"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="4dp" />

        <Button
            android:id="@+id/btnProjectsSort"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Sort"
            android:textColor="#8B5CF6"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>

    <!-- Main content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:paddingBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Projects grid (2-column via pairs) -->
                <LinearLayout
                    android:id="@+id/projectsGridContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- Empty state -->
                <LinearLayout
                    android:id="@+id/projectsEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¼"
                        android:textSize="56sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No projects yet"
                        android:textColor="#64748B"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap + to create your first project"
                        android:textColor="#475569"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- All Files quick access -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Access"
                    android:textColor="#94A3B8"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/projectsQuickAccess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>
        </ScrollView>

        <!-- FAB -->
        <Button
            android:id="@+id/fabNewProject"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:backgroundTint="#8B5CF6"
            android:elevation="6dp" />

    </FrameLayout>

</LinearLayout>
