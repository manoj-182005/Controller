<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foldersDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/home_gradient_bg">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp">

            <ImageButton
                android:id="@+id/btnBackFolderHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="#FFFFFF"
                android:contentDescription="Back"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/btnMenuDrawer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_agenda"
                android:tint="#94A3B8"
                android:contentDescription="Menu"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notes"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="8dp" />

            <ImageButton
                android:id="@+id/btnAddFolderHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_input_add"
                android:tint="#F59E0B"
                android:contentDescription="Add Folder"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/btnFolderViewToggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:tint="#94A3B8"
                android:contentDescription="Switch to All Notes"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- Scrollable content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:paddingBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Recently Viewed strip (shown only when >= 3 views) -->
                <LinearLayout
                    android:id="@+id/recentlyViewedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recently Viewed"
                        android:textColor="#94A3B8"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="8dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:id="@+id/recentlyViewedList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp" />
                    </HorizontalScrollView>
                </LinearLayout>

                <!-- Section header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Folders"
                    android:textColor="#94A3B8"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp" />

                <!-- Folder 2-column grid -->
                <LinearLayout
                    android:id="@+id/folderHomeGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#1E293B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="40dp"
            android:paddingBottom="16dp"
            android:background="#0F172A">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ““ Notes"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- All Notes item -->
                <LinearLayout
                    android:id="@+id/tvDrawerAllNotes"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="ðŸ“‹" android:textSize="18sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="  All Notes" android:textColor="#E2E8F0" android:textSize="15sp"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Favourites item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="â­" android:textSize="18sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="  Favourites" android:textColor="#E2E8F0" android:textSize="15sp" />
                </LinearLayout>

                <!-- Locked Notes item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="ðŸ”’" android:textSize="18sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="  Locked Notes" android:textColor="#E2E8F0" android:textSize="15sp" />
                </LinearLayout>

                <!-- Recently Deleted item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="ðŸ—‘ï¸" android:textSize="18sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="  Recently Deleted" android:textColor="#E2E8F0" android:textSize="15sp" />
                </LinearLayout>

                <!-- Divider -->
                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#334155" android:layout_margin="12dp" />

                <!-- Folder tree section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Folders"
                    android:textColor="#64748B"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:id="@+id/drawerFolderTree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Add folder button at bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="âž•" android:textSize="18sp" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="  Add Folder" android:textColor="#F59E0B" android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
