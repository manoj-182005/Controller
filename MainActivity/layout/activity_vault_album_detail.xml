<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A0E21">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical"
        android:background="#0F172A">

        <Button
            android:id="@+id/btnAlbumBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â†"
            android:textSize="20sp"
            android:textColor="#F1F5F9"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/tvAlbumName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Album"
            android:textColor="#F1F5F9"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="8dp" />

        <!-- More options -->
        <Button
            android:id="@+id/btnAlbumMore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â‹®"
            android:textSize="20sp"
            android:textColor="#94A3B8"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <!-- Album Info Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvAlbumFileCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 files"
            android:textColor="#64748B"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnAddFilesToAlbum"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="+ Add Files"
            android:textColor="#F59E0B"
            android:textSize="13sp"
            android:backgroundTint="@android:color/transparent" />

    </LinearLayout>

    <!-- File Grid -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.widget.GridView
            android:id="@+id/albumFileGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp"
            android:padding="2dp" />

        <LinearLayout
            android:id="@+id/albumEmptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“"
                android:textSize="48sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This album is empty"
                android:textColor="#F1F5F9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap 'Add Files' to add existing vault files"
                android:textColor="#64748B"
                android:textSize="14sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
