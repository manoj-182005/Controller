<?xml version="1.0" encoding="utf-8"?>
<!-- Full-width meeting card for the meetings list -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="#1E1E3A"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Left colored accent border -->
        <View
            android:id="@+id/viewColorAccent"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent" />

        <!-- Card content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- Header row: icon + title + menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/ivCardTypeIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:contentDescription="Meeting type"
                    android:scaleType="centerInside"
                    android:padding="4dp"
                    android:background="@drawable/task_icon_circle_bg"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/tvCardTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Meeting title"
                    android:textColor="#F1F5F9"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/btnCardMenu"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:contentDescription="More options"
                    android:padding="4dp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Date/time range + duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:contentDescription="Date"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvCardDateTimeRange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mon, Jan 1 Â· 2:00â€“3:00 PM"
                    android:textColor="#94A3B8"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCardDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E9E9E"
                    android:textSize="11sp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/task_chip_removable_bg" />
            </LinearLayout>

            <!-- Platform badge + location/link -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tvCardPlatformBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:textColor="#60A5FA"
                    android:textSize="11sp"
                    android:background="@drawable/task_chip_removable_bg"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvCardLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Attendee avatars (overlapping, up to 4) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <FrameLayout
                    android:id="@+id/attendeeAvatarsContainer"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1" />

                <!-- Agenda + action items count chips -->
                <TextView
                    android:id="@+id/tvCardAgendaCount"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:text="0 agenda"
                    android:textColor="#94A3B8"
                    android:textSize="11sp"
                    android:background="@drawable/task_chip_removable_bg"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvCardActionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:text="0 actions"
                    android:textColor="#94A3B8"
                    android:textSize="11sp"
                    android:background="@drawable/task_chip_removable_bg" />
            </LinearLayout>

            <!-- Status badge + LIVE badge row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/tvCardStatusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#F1F5F9"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/task_priority_pill_bg"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvCardLiveBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="ðŸ”´ LIVE"
                    android:textColor="#EF5350"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/task_chip_removable_bg"
                    android:visibility="gone" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Join button (shown when meeting is live/starting soon) -->
                <TextView
                    android:id="@+id/btnCardJoin"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:paddingHorizontal="14dp"
                    android:text="Join"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/task_save_btn_bg"
                    android:visibility="gone" />

                <!-- View Notes button (shown for past meetings) -->
                <TextView
                    android:id="@+id/btnCardViewNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:paddingHorizontal="14dp"
                    android:text="View Notes"
                    android:textColor="#6C63FF"
                    android:textSize="13sp"
                    android:background="@drawable/task_chip_removable_bg"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
