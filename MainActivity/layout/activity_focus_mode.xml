<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E21">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- â•â•â• MINIMAL TOP BAR (fades in on scroll) â•â•â• -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp"
            android:alpha="0.6">

            <ImageButton
                android:id="@+id/btnExit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#64748B"
                android:scaleType="centerInside"
                android:contentDescription="Exit Focus Mode" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Word count -->
            <TextView
                android:id="@+id/tvWordCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 words"
                android:textColor="#64748B"
                android:textSize="12sp"
                android:paddingHorizontal="12dp" />

            <!-- Ambient sound toggle -->
            <ImageButton
                android:id="@+id/btnAmbientSound"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                android:tint="#64748B"
                android:scaleType="centerInside"
                android:contentDescription="Ambient Sounds" />

            <!-- Focus timer -->
            <ImageButton
                android:id="@+id/btnTimer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_recent_history"
                android:tint="#64748B"
                android:scaleType="centerInside"
                android:contentDescription="Focus Timer" />
        </LinearLayout>

        <!-- â•â•â• FOCUS TIMER BAR (optional, toggleable) â•â•â• -->
        <LinearLayout
            android:id="@+id/layoutFocusTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvFocusTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25:00"
                android:textColor="#F59E0B"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnTimerStartPause"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_play"
                android:tint="#F59E0B"
                android:scaleType="centerInside"
                android:layout_marginStart="12dp"
                android:contentDescription="Start/Pause Timer" />
        </LinearLayout>

        <!-- â•â•â• WRITING AREA â•â•â• -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="28dp"
                android:paddingTop="40dp"
                android:paddingBottom="200dp">

                <!-- Title -->
                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:textColor="#F1F5F9"
                    android:textColorHint="#334155"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLines="2"
                    android:lineSpacingMultiplier="1.2" />

                <!-- Body -->
                <EditText
                    android:id="@+id/etBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start writing..."
                    android:textColor="#CBD5E1"
                    android:textColorHint="#1E293B"
                    android:textSize="17sp"
                    android:background="@null"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:lineSpacingMultiplier="1.6"
                    android:layout_marginTop="16dp"
                    android:minHeight="300dp" />
            </LinearLayout>
        </ScrollView>

        <!-- â•â•â• AMBIENT SOUND PANEL (bottom sheet style) â•â•â• -->
        <LinearLayout
            android:id="@+id/layoutAmbientPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bottom_sheet_bg"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambient Sounds"
                android:textColor="#F1F5F9"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnSoundNone"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="ðŸ”‡"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/card_background"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/btnSoundWhite"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="ðŸŒŠ"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/card_background"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/btnSoundRain"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="ðŸŒ§"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/card_background"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/btnSoundTyping"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="âŒ¨"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/card_background"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/btnSoundCafe"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="â˜•"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/card_background" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekAmbientVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:max="100"
                android:progress="70"
                android:progressTint="#F59E0B"
                android:thumbTint="#F59E0B" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
