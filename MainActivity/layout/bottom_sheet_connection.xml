<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:paddingBottom="24dp">

    <!-- Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="#444C5A" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Connection Manager"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bsConnectionStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â— Not Connected"
            android:textColor="#EF5350"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1E2D40"
        android:layout_marginBottom="12dp" />

    <!-- Saved Servers Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVED SERVERS"
        android:textColor="#5B6B7D"
        android:textSize="11sp"
        android:letterSpacing="0.1"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/bsServerListView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="4dp"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="12dp" />

    <!-- Action Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/bsAddServerBtn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="ï¼‹ Add Server"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:backgroundTint="#1565C0"
            android:layout_marginEnd="6dp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/bsQrPairBtn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="ðŸ“· QR Pair"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:backgroundTint="#00838F"
            android:layout_marginEnd="6dp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/bsAutoDiscoverBtn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="ðŸ” Discover"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:backgroundTint="#4527A0"
            app:cornerRadius="10dp" />

    </LinearLayout>

    <!-- Start Server Toggle Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PC Server"
            android:textColor="#CCDDEE"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bsStartServerBtn"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:text="Start Server"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:backgroundTint="#1565C0"
            app:cornerRadius="10dp" />

    </LinearLayout>

</LinearLayout>
