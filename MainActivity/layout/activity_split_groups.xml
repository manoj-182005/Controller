<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- ═══ TOOLBAR ═══ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="‹"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="✂️ Split Bills"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- ═══ HEADER SUMMARY CARD ═══ -->
            <LinearLayout
                android:id="@+id/summaryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/split_header_bg"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall Balance"
                    android:textColor="#B0B0B0"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvNetBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹0.00"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <!-- Owed to you -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/split_balance_positive_bg"
                        android:padding="12dp"
                        android:layout_marginEnd="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▲ Owed to you"
                            android:textColor="#22C55E"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvOwedToYou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0.00"
                            android:textColor="#22C55E"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- You owe -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/split_balance_negative_bg"
                        android:padding="12dp"
                        android:layout_marginStart="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▼ You owe"
                            android:textColor="#EF4444"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvYouOwe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0.00"
                            android:textColor="#EF4444"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ═══ ACTIVE GROUPS ═══ -->
            <TextView
                android:id="@+id/tvActiveLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Groups"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/activeGroupsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tvNoGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No split groups yet.\nTap + to create one!"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:textAlignment="center"
                android:padding="40dp"
                android:visibility="gone" />

            <!-- ═══ ARCHIVED / SETTLED GROUPS ═══ -->
            <TextView
                android:id="@+id/tvArchivedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settled / Archived"
                android:textColor="#9CA3AF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/archivedGroupsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

    <!-- FAB -->
    <Button
        android:id="@+id/fabNewGroup"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/split_fab_bg"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        android:elevation="8dp" />

</FrameLayout>
