<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F14">

    <!-- Normal top bar -->
    <LinearLayout
        android:id="@+id/normalTopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:background="#1A1A2E">

        <Button
            android:id="@+id/btnHubBrowserBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="â†"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="0dp" />

        <TextView
            android:id="@+id/tvBrowserTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Files"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingStart="4dp" />

        <Button
            android:id="@+id/btnBrowserSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ”"
            android:textSize="16sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="0dp" />

        <Button
            android:id="@+id/btnBrowserSort"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Sort"
            android:textColor="#8B5CF6"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="6dp"
            android:paddingEnd="6dp" />

        <Button
            android:id="@+id/btnBrowserViewToggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="âŠž"
            android:textSize="16sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="0dp" />

        <Button
            android:id="@+id/btnBrowserSelect"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Select"
            android:textColor="#8B5CF6"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="6dp"
            android:paddingEnd="6dp" />

        <Button
            android:id="@+id/btnBrowserFilter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="âš™"
            android:textSize="16sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="0dp" />
    </LinearLayout>

    <!-- Multi-select top bar (hidden by default) -->
    <LinearLayout
        android:id="@+id/multiSelectTopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="#1A1A2E"
        android:visibility="gone">

        <Button
            android:id="@+id/btnMultiSelectCancel"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="âœ•"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="0dp" />

        <TextView
            android:id="@+id/tvMultiSelectCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 selected"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="8dp" />

        <Button
            android:id="@+id/btnMultiSelectAll"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Select All"
            android:textColor="#8B5CF6"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>

    <!-- Main content below top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp">

        <!-- Breadcrumb -->
        <HorizontalScrollView
            android:id="@+id/breadcrumbScroll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scrollbars="none"
            android:background="#12121E"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:id="@+id/breadcrumbContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </HorizontalScrollView>

        <!-- Active filters row -->
        <HorizontalScrollView
            android:id="@+id/activeFiltersScroll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scrollbars="none"
            android:background="#0F0F14"
            android:visibility="gone"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:id="@+id/activeFiltersContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </HorizontalScrollView>

        <!-- Count -->
        <TextView
            android:id="@+id/tvBrowserCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 files"
            android:textColor="#64748B"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

        <!-- File view container -->
        <FrameLayout
            android:id="@+id/fileViewContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Grid view -->
            <GridView
                android:id="@+id/fileGridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:verticalSpacing="8dp"
                android:horizontalSpacing="8dp"
                android:padding="12dp"
                android:stretchMode="columnWidth"
                android:scrollbars="none"
                android:visibility="visible" />

            <!-- List view -->
            <ListView
                android:id="@+id/fileListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:padding="8dp"
                android:visibility="gone" />

            <!-- Timeline view -->
            <ScrollView
                android:id="@+id/timelineScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/timelineContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp" />
            </ScrollView>

            <!-- Empty state -->
            <LinearLayout
                android:id="@+id/browserEmptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‚"
                    android:textSize="64sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvBrowserEmptyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No files found"
                    android:textColor="#64748B"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- Multi-select bottom action bar -->
    <LinearLayout
        android:id="@+id/multiSelectBottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#1A1A2E"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnMultiShare"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Share"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <Button
            android:id="@+id/btnMultiMove"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Move"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <Button
            android:id="@+id/btnMultiAddToProject"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Project"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <Button
            android:id="@+id/btnMultiDelete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Delete"
            android:textColor="#EF4444"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
