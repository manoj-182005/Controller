<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F0F14">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#1A1A2E"
        android:paddingStart="4dp"
        android:paddingEnd="8dp">

        <Button
            android:id="@+id/btnDupBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="←"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="0dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Duplicate Manager"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="4dp" />
    </LinearLayout>

    <!-- Scrollable main content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:paddingBottom="64dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header gradient card -->
                <LinearLayout
                    android:id="@+id/dupHeaderCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#1A1A2E"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Duplicate Groups"
                                android:textColor="#94A3B8"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvDupGroupCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wasted Storage"
                                android:textColor="#94A3B8"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvDupWasted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 B"
                                android:textColor="#EF4444"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnDupScan"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Scan for Duplicates"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:backgroundTint="#8B5CF6"
                        android:layout_marginTop="8dp" />

                    <ProgressBar
                        android:id="@+id/dupScanProgress"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminate="true"
                        android:indeterminateTint="#8B5CF6"
                        android:visibility="gone"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvDupScanStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scanning..."
                        android:textColor="#94A3B8"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Action buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnDupAutoResolve"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Auto-Resolve All"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:backgroundTint="#1E293B"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnDupSelectAll"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Select All"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:backgroundTint="#1E293B" />
                </LinearLayout>

                <!-- Duplicate groups container -->
                <LinearLayout
                    android:id="@+id/dupGroupsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- Empty state -->
                <LinearLayout
                    android:id="@+id/dupEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✅"
                        android:textSize="56sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No duplicates found. Tap 'Scan' to check."
                        android:textColor="#64748B"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginTop="12dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Bottom bar for delete selected -->
        <LinearLayout
            android:id="@+id/dupBottomBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#1A1A2E"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="8dp">

            <TextView
                android:id="@+id/tvDupSelectedCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 selected"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnDupDeleteSelected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Delete Selected"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:backgroundTint="#EF4444" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
