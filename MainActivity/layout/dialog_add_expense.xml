<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/glass_card_bg"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD EXPENSE"
        android:textSize="13sp"
        android:textColor="#7C3AED"
        android:letterSpacing="0.15"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <!-- Amount -->
    <EditText
        android:id="@+id/etExpenseAmount"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="â‚¹ Amount"
        android:textColorHint="#3D4B5E"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:background="@drawable/task_input_bg"
        android:paddingHorizontal="16dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp" />

    <!-- Category selection label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="#6B7B8D"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <!-- Category grid (2 rows of 5) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/categoryRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/categoryRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>

    <!-- Wallet selector -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallet"
        android:textColor="#6B7B8D"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/walletChipContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- Note -->
    <EditText
        android:id="@+id/etExpenseNote"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Add a note (optional)"
        android:textColorHint="#3D4B5E"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@drawable/task_input_bg"
        android:paddingHorizontal="14dp"
        android:singleLine="true"
        android:layout_marginBottom="12dp" />

    <!-- Income toggle + Save -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cbIsIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income / Refund"
            android:textColor="#6B7B8D"
            android:textSize="13sp"
            android:buttonTint="#7C3AED" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSaveExpense"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="ðŸ’¾ Save"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#7C3AED"
            android:paddingHorizontal="24dp"
            app:cornerRadius="12dp" />
    </LinearLayout>

</LinearLayout>
