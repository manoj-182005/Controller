<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- â•â•â• TOOLBAR â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnBackIncome"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="â€¹"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ’° Income Tracker"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btnRecurringIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Recurring"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="#86EFAC"
                    android:backgroundTint="#14532D"
                    app:cornerRadius="12dp"
                    android:paddingHorizontal="14dp" />
            </LinearLayout>

            <!-- â•â•â• PERIOD SELECTOR â•â•â• -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="14dp">

                <LinearLayout
                    android:id="@+id/periodChipContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- â•â•â• INCOME / EXPENSE / SAVINGS SUMMARY CARD â•â•â• -->
            <LinearLayout
                android:id="@+id/summaryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/income_summary_card_bg"
                android:padding="20dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INCOME THIS PERIOD"
                    android:textSize="11sp"
                    android:textColor="#86EFAC"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvTotalIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹0"
                    android:textColor="#22C55E"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Income vs Expenses row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="14dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INCOME"
                            android:textSize="9sp"
                            android:textColor="#86EFAC"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/tvIncomeAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#22C55E"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EXPENSES"
                            android:textSize="9sp"
                            android:textColor="#FCA5A5"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/tvExpenseAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#EF4444"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F2937"
                    android:layout_marginBottom="14dp" />

                <!-- Net Savings -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NET SAVINGS"
                    android:textSize="10sp"
                    android:textColor="#9CA3AF"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvNetSavings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹0"
                    android:textColor="#22C55E"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvSavingsRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You saved 0% of your income this period"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- â•â•â• INCOME BY CATEGORY â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INCOME BY CATEGORY"
                    android:textSize="11sp"
                    android:textColor="#22C55E"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/categoryBreakdownContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/tvNoCategoryData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No income recorded this period"
                    android:textColor="#6B7B8D"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- â•â•â• INCOME BY SOURCE â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INCOME SOURCES"
                    android:textSize="11sp"
                    android:textColor="#22C55E"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/sourceBreakdownContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/tvNoSourceData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No income recorded this period"
                    android:textColor="#6B7B8D"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- â•â•â• RECENT INCOME LIST â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="RECENT INCOME"
                        android:textSize="11sp"
                        android:textColor="#22C55E"
                        android:letterSpacing="0.15"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvEmptyIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No income recorded this period.\nTap ï¼‹ to add your first income entry."
                    android:textColor="#6B7B8D"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:paddingVertical="24dp"
                    android:visibility="gone" />

                <ListView
                    android:id="@+id/incomeList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:scrollbars="none" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- â•â•â• FAB â€” Add Income â•â•â• -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#22C55E"
        app:tint="#FFFFFF"
        android:contentDescription="Add Income" />

</FrameLayout>
