<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E21"
    android:orientation="vertical">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#0F172A"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="â†"
            android:textColor="#F1F5F9"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Document"
            android:textColor="#F1F5F9"
            android:textSize="15sp"
            android:paddingStart="8dp" />

        <TextView
            android:id="@+id/btnMore"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="â‹®"
            android:textColor="#F1F5F9"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- File info bar -->
    <TextView
        android:id="@+id/tvFileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E293B"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text=""
        android:textColor="#94A3B8"
        android:textSize="12sp" />

    <!-- Text viewer (visible for text/plain files) -->
    <ScrollView
        android:id="@+id/scrollViewText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:padding="16dp"
            android:textColor="#F1F5F9"
            android:textSize="14sp" />
    </ScrollView>

    <!-- External open panel (visible for non-text files) -->
    <LinearLayout
        android:id="@+id/layoutOpenExternal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“„"
            android:textSize="72sp"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/tvDocType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Document"
            android:textColor="#F1F5F9"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E293B"
            android:gravity="center"
            android:padding="12dp"
            android:text="âš  File will be temporarily exported to open in external app"
            android:textColor="#F59E0B"
            android:textSize="13sp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/btnOpenExternal"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:background="#6C63FF"
            android:gravity="center"
            android:text="Open with..."
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
