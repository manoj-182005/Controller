<?xml version="1.0" encoding="utf-8"?>
<!-- Task Detail Screen â€” full task view with timer, subtasks, activity log -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E21">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- â”€â”€ Header Bar â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="@drawable/task_detail_header_bg">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="Back"
                    android:scaleType="centerInside"
                    android:padding="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btnEditTask"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Edit"
                    android:scaleType="centerInside"
                    android:padding="4dp"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:id="@+id/btnDeleteTask"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:contentDescription="Delete"
                    android:scaleType="centerInside"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- â”€â”€ Priority Strip â”€â”€ -->
            <View
                android:id="@+id/viewDetailPriorityStrip"
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <!-- â”€â”€ Title & Badges â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="16dp">

                <!-- Status + Priority row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvDetailStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:textColor="#F1F5F9"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:background="@drawable/task_priority_pill_bg"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvDetailPriority"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:background="@drawable/task_priority_pill_bg"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvDetailRecurringBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="ðŸ” Recurring"
                        android:textColor="#60A5FA"
                        android:textSize="11sp"
                        android:background="@drawable/task_chip_removable_bg"
                        android:visibility="gone" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/btnDetailStar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="â˜†"
                        android:textSize="22sp" />
                </LinearLayout>

                <!-- Title -->
                <TextView
                    android:id="@+id/tvDetailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F1F5F9"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDetailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#94A3B8"
                    android:textSize="15sp"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <!-- â”€â”€ Metadata Section â”€â”€ -->
            <LinearLayout
                android:id="@+id/detailMetaSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <!-- Category row -->
                <LinearLayout
                    android:id="@+id/detailCategoryRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvDetailCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F1F5F9"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Due date row -->
                <LinearLayout
                    android:id="@+id/detailDueDateRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Due"
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvDetailDueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F1F5F9"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Recurrence row -->
                <LinearLayout
                    android:id="@+id/detailRecurrenceRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Repeats"
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvDetailRecurrence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#60A5FA"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Tags row -->
                <LinearLayout
                    android:id="@+id/detailTagsRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Tags"
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/detailTagsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>

                <!-- Duration row -->
                <LinearLayout
                    android:id="@+id/detailDurationRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvDetailDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F1F5F9"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- â”€â”€ Subtasks Section â”€â”€ -->
            <LinearLayout
                android:id="@+id/detailSubtasksSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹  Subtasks"
                        android:textColor="#F1F5F9"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvDetailSubtaskProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#60A5FA"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Progress bar -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@drawable/task_subtask_progress_bg"
                    android:layout_marginBottom="12dp">

                    <View
                        android:id="@+id/viewDetailSubtaskProgressFill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/task_subtask_progress_fill" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/detailSubtasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- â”€â”€ Timer Section â”€â”€ -->
            <LinearLayout
                android:id="@+id/detailTimerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±  Focus Timer"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvTimerDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00:00:00"
                    android:textColor="#F1F5F9"
                    android:textSize="42sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/btnStartTimer"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:text="â–¶"
                        android:textColor="#66BB6A"
                        android:textSize="22sp"
                        android:background="@drawable/task_timer_btn_bg" />

                    <TextView
                        android:id="@+id/btnStopTimer"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:text="â– "
                        android:textColor="#EF5350"
                        android:textSize="22sp"
                        android:background="@drawable/task_timer_stop_btn_bg"
                        android:layout_marginStart="16dp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTotalTimeLogged"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/timerSessionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- â”€â”€ Attachments Section â”€â”€ -->
            <LinearLayout
                android:id="@+id/detailAttachmentsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Ž  Attachments"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:id="@+id/detailAttachmentsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </LinearLayout>

            <!-- â”€â”€ Notes Section â”€â”€ -->
            <LinearLayout
                android:id="@+id/detailNotesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“  Notes"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tvDetailNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#94A3B8"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.3" />
            </LinearLayout>

            <!-- â”€â”€ Reminders Section â”€â”€ -->
            <LinearLayout
                android:id="@+id/detailRemindersSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ””  Reminders"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:id="@+id/detailRemindersContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- â”€â”€ Activity Log â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/task_detail_section_bg"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š  Activity"
                    android:textColor="#F1F5F9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tvDetailCreatedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDetailUpdatedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDetailCompletedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- â”€â”€ Bottom action: Mark Complete / Skip Recurrence â”€â”€ -->
    <LinearLayout
        android:id="@+id/detailBottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:background="#0D1117">

        <TextView
            android:id="@+id/btnDetailComplete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="âœ“  Mark Complete"
            android:textColor="#0A0E21"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/task_save_btn_bg" />

        <TextView
            android:id="@+id/btnSkipRecurrence"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Skip â†’"
            android:textColor="#60A5FA"
            android:textSize="13sp"
            android:layout_marginStart="8dp"
            android:background="@drawable/task_chip_removable_bg"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>
