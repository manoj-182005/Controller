<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/notes_bottom_sheet_bg"
    android:paddingTop="16dp"
    android:paddingBottom="32dp"
    android:paddingHorizontal="20dp">

    <!-- Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#475569"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tvCreateFolderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Folder"
        android:textColor="#F1F5F9"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Folder Name Input -->
    <EditText
        android:id="@+id/etFolderName"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="Folder name"
        android:textColorHint="#475569"
        android:textColor="#E2E8F0"
        android:textSize="16sp"
        android:background="@drawable/notes_search_bg"
        android:paddingHorizontal="16dp"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- Color picker label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textColor="#94A3B8"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <!-- Color row -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/colorPickerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" />
    </HorizontalScrollView>

    <!-- Icon picker label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Icon"
        android:textColor="#94A3B8"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <!-- Icon grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/iconPickerRecycler"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:nestedScrollingEnabled="false"
        android:layout_marginBottom="20dp" />

    <!-- Save button -->
    <LinearLayout
        android:id="@+id/btnSaveFolder"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/notes_fab_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Folder"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
