<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- â•â•â• TOOLBAR â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="â€¹"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IOU Detail"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœï¸"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- â•â•â• HEADER CARD â•â•â• -->
            <LinearLayout
                android:id="@+id/headerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="20dp"
                android:layout_marginBottom="14dp">

                <!-- Type Badge + Person -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="14dp">

                    <TextView
                        android:id="@+id/tvTypeBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LENT"
                        android:textColor="#22C55E"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:background="@drawable/iou_lent_chip_bg"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvAvatar"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/iou_avatar_bg"
                        android:layout_marginEnd="10dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPersonName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Person"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvStatusBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVE"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#E5E7EB"
                    android:textSize="15sp"
                    android:layout_marginBottom="14dp" />

                <!-- Amounts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Original Amount"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvOriginalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Outstanding"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvOutstanding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textColor="#EF4444"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Progress Bar Track -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/iou_progress_track_bg"
                    android:layout_marginBottom="12dp">

                    <View
                        android:id="@+id/progressFill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/iou_progress_fill_bg" />
                </FrameLayout>

                <!-- Dates row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textColor="#9CA3AF"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expected Return"
                            android:textColor="#9CA3AF"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvExpectedReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not set"
                            android:textColor="#9CA3AF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â• WALLET & NOTES â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:id="@+id/tvWalletName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’³ Wallet: â€”"
                    android:textColor="#9CA3AF"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#9CA3AF"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvReminderInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#F59E0B"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- â•â•â• REPAYMENT HISTORY â•â•â• -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repayment History"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/repaymentHistoryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tvNoRepayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No repayments yet"
                android:textColor="#6B7280"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />

            <!-- â•â•â• ACTION BUTTONS â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/btnAddRepayment"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="+ Repayment"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/iou_tab_selected_bg"
                    android:layout_marginEnd="6dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnMarkSettled"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="âœ… Settle"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/iou_lent_chip_bg"
                    android:layout_marginHorizontal="3dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ðŸ—‘ Delete"
                    android:textColor="#EF4444"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/iou_borrowed_chip_bg"
                    android:layout_marginStart="6dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnWriteOff"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Write Off"
                android:textColor="#6B7280"
                android:textSize="13sp"
                android:background="@drawable/glass_card_bg"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
