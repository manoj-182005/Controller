<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- â•â•â• TOOLBAR â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnBackWallets"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="â€¹"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ‘› Wallets"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <Button
                    android:id="@+id/btnToggleBalance"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="ðŸ‘"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- â•â•â• TOTAL BALANCE HEADER â•â•â• -->
            <LinearLayout
                android:id="@+id/walletHeaderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/wallet_header_bg"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL BALANCE"
                    android:textSize="11sp"
                    android:textColor="#C4B5FD"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvTotalBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹0.00"
                    android:textSize="36sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Income"
                            android:textSize="11sp"
                            android:textColor="#80FFFFFF"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvTotalIncome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textSize="16sp"
                            android:textColor="#22C55E"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expenses"
                            android:textSize="11sp"
                            android:textColor="#80FFFFFF"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvTotalExpenses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹0"
                            android:textSize="16sp"
                            android:textColor="#EF4444"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wallets"
                            android:textSize="11sp"
                            android:textColor="#80FFFFFF"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvWalletCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="#C084FC"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â• QUICK ACTIONS â•â•â• -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnTransfer"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="â†” Transfer"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:textColor="#C084FC"
                    android:backgroundTint="#1E1B4B"
                    app:cornerRadius="14dp"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btnViewArchived"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="ðŸ“ Archived"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:textColor="#9CA3AF"
                    android:backgroundTint="#111827"
                    app:cornerRadius="14dp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <!-- â•â•â• WALLET CARDS â•â•â• -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY WALLETS"
                android:textSize="11sp"
                android:textColor="#7C3AED"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:id="@+id/walletsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tvNoWallets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No wallets yet. Tap + to add one."
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone" />

            <!-- â•â•â• RECENT TRANSFERS â•â•â• -->
            <TextView
                android:id="@+id/tvTransfersLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECENT TRANSFERS"
                android:textSize="11sp"
                android:textColor="#7C3AED"
                android:letterSpacing="0.15"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/transfersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />

            <!-- â•â•â• ARCHIVED WALLETS (toggleable) â•â•â• -->
            <LinearLayout
                android:id="@+id/archivedSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARCHIVED"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:id="@+id/archivedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- â•â•â• FAB â•â•â• -->
    <Button
        android:id="@+id/fabAddWallet"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/wallet_fab_bg"
        android:text="+"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:elevation="8dp" />
</FrameLayout>
