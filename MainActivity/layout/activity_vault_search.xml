<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E21"
    android:orientation="vertical">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#0F172A"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="←"
            android:textColor="#F1F5F9"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#1E293B"
            android:hint="Search vault..."
            android:hintTextColor="#64748B"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#F1F5F9"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Filter chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:scrollbars="none"
        android:background="#0F172A">

        <LinearLayout
            android:id="@+id/filterChipsRow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="#6C63FF"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:text="All"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/chipImages"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="#1E293B"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:text="Images"
                android:textColor="#94A3B8"
                android:textSize="13sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/chipVideos"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="#1E293B"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:text="Videos"
                android:textColor="#94A3B8"
                android:textSize="13sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/chipAudio"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="#1E293B"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:text="Audio"
                android:textColor="#94A3B8"
                android:textSize="13sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/chipDocs"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="#1E293B"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:text="Docs"
                android:textColor="#94A3B8"
                android:textSize="13sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/chipFavourites"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="#1E293B"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:text="♥ Favourites"
                android:textColor="#94A3B8"
                android:textSize="13sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Results area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/resultsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <!-- Empty state -->
            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="48dp"
                android:text="Search for files in your vault"
                android:textColor="#64748B"
                android:textSize="15sp"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
