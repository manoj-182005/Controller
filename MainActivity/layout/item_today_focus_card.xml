<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/task_focus_card_bg"
    android:padding="14dp"
    android:layout_marginEnd="10dp">

    <!-- Priority indicator dot + title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/viewFocusPriority"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/task_fab_bg" />

        <TextView
            android:id="@+id/tvFocusTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Task title"
            android:textColor="#F1F5F9"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Category -->
    <TextView
        android:id="@+id/tvFocusCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal"
        android:textColor="#94A3B8"
        android:textSize="11sp"
        android:layout_marginTop="4dp" />

    <!-- Due time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â°"
            android:textSize="11sp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/tvFocusDueTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:00 PM"
            android:textColor="#60A5FA"
            android:textSize="11sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>
</LinearLayout>
