<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@drawable/notes_card_bg"
    android:layout_marginEnd="10dp"
    android:clipChildren="false">

    <!-- Colored left accent border -->
    <View
        android:id="@+id/recentCategoryAccent"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#F59E0B" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvRecentNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note Title"
            android:textColor="#F1F5F9"
            android:textSize="13sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Content preview -->
        <TextView
            android:id="@+id/tvRecentNotePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#94A3B8"
            android:textSize="11sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="3dp" />

        <!-- Bottom row: folder chip + timestamp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">

            <!-- Folder chip -->
            <TextView
                android:id="@+id/tvRecentFolderChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#94A3B8"
                android:textSize="9sp"
                android:background="@drawable/notes_card_bg"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/tvRecentTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#64748B"
                android:textSize="9sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
