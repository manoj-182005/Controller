<?xml version="1.0" encoding="utf-8"?>
<!-- Task card background for OVERDUE state â€” red left border glow -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Red glow on left edge -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#40EF4444"
                android:endColor="#00EF4444"
                android:angle="0" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Main card body -->
    <item android:left="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#121827"
                android:endColor="#0D1117"
                android:angle="270" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#20EF4444" />
        </shape>
    </item>
</layer-list>
